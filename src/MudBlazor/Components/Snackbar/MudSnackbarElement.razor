@namespace MudBlazor
@inherits MudComponentBase

@Css
<div class="@Snackbar.State.ToastClass" style="@Snackbar.State.AnimationStyle" @onclick="Clicked">
    <div class="mud-snackbar-content-message">
        @Message
    </div>
    @if (Snackbar.State.ShowCloseIcon)
    {
        <div class="mud-snackbar-content-action">
            <MudIconButton Icon="@Icons.Material.Close" Size="Size.Small" @onclick="CloseIconClicked"/>
        </div>
    }
</div>