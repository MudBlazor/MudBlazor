@namespace MudBlazor
@inherits MudComponentBase

<div id="mud-snackbar-container" class="@Classname" style="@Style">
    @foreach (var snackbar in Snackbar)
    {
        <MudSnackbarElement @key="snackbar" Snackbar="@snackbar"></MudSnackbarElement>
    }
</div>