@inherits MudFormComponent<T, string>;
@typeparam T;
@namespace MudBlazor
@using Microsoft.AspNetCore.Components.Forms

<MudInputControl Class="@Classname" Style="@Style" Error="HasErrors" ErrorText="@GetErrorText()" Required="@Required">
    <InputContent>
        <InputFile OnChange="HandleFilesChanged" id="@_id" class="@InputClass" hidden multiple="@(Multiple ? "" : null)" accept="@Accept" @attributes="UserAttributes" />
        @if (ButtonTemplate != null)
        {
            @ButtonTemplate(_id)
        }
        @if (SelectedTemplate != null)
        {
            @SelectedTemplate(_value)
        }
    </InputContent>
</MudInputControl>