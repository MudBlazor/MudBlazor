@typeparam T
@namespace MudBlazor
@inherits MudBaseColumn
@if (Visible)
{
    @if (Mode == Rendermode.Header)
    {
        <MudTh>@HeaderText</MudTh>
    }
    else if (Mode is Rendermode.Item or Rendermode.Edit)
    {
        <MudTd><MudAvatar Size="Size.Small">@Value.ToString()</MudAvatar></MudTd>
    }
    else if (Mode == Rendermode.Footer)
    {
        <MudTd></MudTd>
    }
}

@code {

    [Parameter]
    public T Value { get; set; }
}
