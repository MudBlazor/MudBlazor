@namespace MudBlazor
@typeparam T
@inherits MudBaseColumn

@if (Visible)
{
    @if (Mode == Rendermode.Header && Header is not null)
    {
        @Header(DataContext)
    }
    else if (Mode == Rendermode.Item && Row is not null)
    {
        @Row(DataContext)
    }
    else if (Mode == Rendermode.Edit && Edit is not null)
    {
        @Edit(DataContext)
    }
    else if (Mode == Rendermode.Footer && Footer is not null)
    {
        @Footer(DataContext)
    }
    else
    {
        <MudTd></MudTd>
    }
}
