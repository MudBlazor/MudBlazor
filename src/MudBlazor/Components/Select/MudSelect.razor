@namespace MudBlazor
@inherits ComponentBaseMudSelect



<MudFormControl HelperText="@HelperText" FullWidth="@FullWidth" Margin="@Margin" Class="@Classname">
        <MudInput InputType="InputType.Text" Variant="@Variant" Value="@Value" DisabelUnderLine="@DisabelUnderLine" Placeholder="@Placeholder" Disabled=@Disabled ReadOnly="@ReadOnly" @onclick="@ShowSelect" />
        <MudInputLabel Class="mud-input-label-formcontrol" Variant="@Variant">
            @Label
        </MudInputLabel>
        <MudIcon Class="mud-select-icon" Icon="@(isMenuOpen? @Icons.Material.ArrowDropUp : @Icons.Material.ArrowDropDown)"></MudIcon>
        <CascadingValue Value="@this">
            <div class="mud-select-menu @(isMenuOpen? "mud-open" : "")">
                <MudList>
                    @ChildContent
                </MudList>
            </div>
        </CascadingValue>
</MudFormControl>


@if (isMenuOpen)
{
    <div class="mud-select-overlay" @onclick="@ShowSelect"></div>
}
