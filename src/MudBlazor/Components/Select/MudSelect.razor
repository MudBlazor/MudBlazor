@namespace MudBlazor
@inherits ComponentBaseMudSelect

<div class="@Classname" @onclick="@ShowSelect">
    <FormControl HelperText="@HelperText">
        <Input InputType="InputType.Text" Class="mud-input-formcontrol" Variant="@Variant" Value="@Value" DisabelUnderLine="@DisabelUnderLine" Placeholder="@Placeholder" Disabled=@Disabled ReadOnly="@ReadOnly" />
        <InputLabel Class="mud-input-label-formcontrol" Variant="@Variant">
            @Label
        </InputLabel>
        <Icon Class="mud-select-icon" Icon="@(isMenuOpen? @Icons.Material.ArrowDropUp : @Icons.Material.ArrowDropDown)"></Icon>
        <CascadingValue Value="@this">
            <div class="mud-select-menu @(isMenuOpen? "mud-open" : "")">
                <MudList>
                    @ChildContent
                </MudList>
            </div>
        </CascadingValue>
    </FormControl>
</div>

@if (isMenuOpen)
{
    <div class="mud-select-overlay" @onclick="@ShowSelect"></div>
}
