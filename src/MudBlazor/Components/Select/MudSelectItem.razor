@namespace MudBlazor
@typeparam T
@inherits MudBaseSelectItem

@if (HideContent == false)
{
	<MudListItem @attributes="UserAttributes" Value="@ItemId" id="@ItemId" OnClick="EventUtil.AsNonRenderingEventHandler(OnClicked)" OnClickHandlerPreventDefault="true" Icon="@CheckBoxIcon" Disabled="@Disabled" Class="@GetCssClasses()" Style="@Style">
		@if (ChildContent != null)
		{
			@ChildContent
		}
		else
		{
			@DisplayString
		}
	</MudListItem>
}


