@namespace MudBlazor
@typeparam T
@inherits MudComponentBase

@if (!HideContent)
{
    <MudListItem @attributes="UserAttributes" Value="@ItemId" id="@ItemId" OnClick="@OnClickHandleAsync" OnClickPreventDefault="true" Icon="@CheckBoxIcon" Disabled="@Disabled" Class="@GetCssClasses()" Style="@Style">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            @DisplayString
        }
    </MudListItem>
}
