@namespace MudBlazor
@typeparam T
@inherits MudBaseSelectItem

@if (HideContent == false)
{
    <MudListItem @attributes="UserAttributes" T="T" Value="@Value" Text="@Text" id="@ItemId" OnClick="@HandleOnClick" IsFunctional="@IsFunctional" Href="@Href" Disabled="@Disabled" Class="@GetCssClasses()" Style="@Style">
        @if (ChildContent != null && MudSelect.ItemCollection == null)
        {
            @ChildContent
        }
        else
        {
            @DisplayString
        }
    </MudListItem>
}