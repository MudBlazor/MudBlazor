@namespace MudBlazor
@typeparam T
@inherits MudBaseSelectItem

@if (HideContent == false)
{

    if (Nested == true)
    {
        <MudListItem T="T" Text="@Text" InitiallyExpanded="@InitiallyExpanded" ExpandedChanged="HandleExpandedChanged">
            <NestedList>
                @ChildContent
            </NestedList>
        </MudListItem>

    }
    else
    {
        <MudListSubheader T="T" Sticky="@Sticky">@Text</MudListSubheader>
        @ChildContent
    }
}