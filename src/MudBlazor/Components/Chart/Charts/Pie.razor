@namespace MudBlazor.Charts
@using System.Globalization
@inherits PieBase

<svg class="mud-chart-pie" width="@MudChartParent.Width" height="@MudChartParent.Height" viewBox="-1 -1 2 2" style="transform: rotate(-90deg);">
    <Filters />
    @foreach (var item in Paths.ToList())
    {
        <path class="mud-chart-serie" fill="@(ChartOptions.ChartPalette.GetValue(item.Index % ChartOptions.ChartPalette.Count()))" d="@item.Data"></path>
    }
</svg>
<Legend Data="@Legends" />