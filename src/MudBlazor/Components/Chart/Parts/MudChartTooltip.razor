@using MudBlazor.Utilities
@namespace MudBlazor.Charts

<div class="@MudChartTooltipClass" style="
    position: absolute; 
    left: @(X)px; 
    top: @(Y)px; 
    pointer-events: none; 
    transition: 0.4s;
    transform-origin: center;
    transform: translate(15px, -50%);">
    @ChildContent
</div>

@code
{
    /// <summary>
    /// 
    /// </summary>
    [Parameter]
    public string Style { get; set; }

    /// <summary>
    /// 
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    /// <summary>
    /// 
    /// </summary>
    [Parameter]
    public int X { get; set; }

    /// <summary>
    /// 
    /// </summary>
    [Parameter]
    public int Y { get; set; }

    /// <summary>
    /// 
    /// </summary>
    [Parameter]
    public string Class { get; set; }
    
    private string MudChartTooltipClass => new CssBuilder(Class).Build();
}
