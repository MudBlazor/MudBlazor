@namespace MudBlazor
@inherits MudComponentBase

<div @attributes="UserAttributes" class="@Classnames" style="@Style">
    
    @*TODO: Check if a responsible layout without a center line is reasonable*@

    @if (Align == Align.Center)
    {
        <div class="align-self-center ml-auto mr-auto">
            @ChildContent
        </div>
    }
    else if (Align == Align.Justify)
    {
        <div class="flex-grow-1">
            @ChildContent
        </div>
    }
    else
    {
        <div class="ml-auto flex-grow-1">
            @if (Align == Align.Left)
            {
                @ChildContent
            }
        </div>
        <div class="flex-grow-0">
            @*timeline elements...*@
        </div>
        <div class="mr-auto flex-grow-1">
            @if (Align == Align.Right)
            {
                @ChildContent
            }
        </div>
    }
</div>