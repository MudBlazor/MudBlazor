                @onfocus="OnFocused"
                HideSpinButtons="true" 
                Clearable="@Clearable" 
                OnClearButtonClick="@OnClearButtonClick" 
                Pattern="@Pattern"/>
        </InputContent>
    </MudInputControl>
</CascadingValue>
