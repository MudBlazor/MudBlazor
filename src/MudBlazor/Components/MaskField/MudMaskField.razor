                Disabled=@Disabled 
                DisableUnderLine="@DisableUnderLine" 
                ReadOnly="@ReadOnly" 
                Adornment="@Adornment" 
                AdornmentText="@AdornmentText" 
                AdornmentIcon="@AdornmentIcon" 
                AdornmentColor="@AdornmentColor" 
                IconSize="@IconSize" 
                OnAdornmentClick="@OnAdornmentClick" 
                Error="@Error" 
                Immediate="false" 
                Margin="@Margin" 
