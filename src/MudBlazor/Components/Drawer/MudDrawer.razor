@namespace MudBlazor
@using MudBlazor.Utilities
@using MudBlazor.Extensions
@inherits MudComponentBase

<aside @attributes="UserAttributes" class="@Classname" style="@Style">
    @ChildContent
</aside>

@code {

    protected string Classname =>
    new CssBuilder("mud-drawer")
      .AddClass($"mud-drawer-anchor-{Anchor.ToDescriptionString()}")
      .AddClass($"mud-drawer--open", LayoutState.DrawerOpen)
      .AddClass($"mud-drawer--closed", !LayoutState.DrawerOpen)
      .AddClass($"mud-drawer-clipped", LayoutState.DrawerClipped)
      .AddClass($"mud-elevation-{Elevation.ToString()}")
      .AddClass(Class)
    .Build();

    [Parameter] public int Elevation { set; get; } = 1;

    [Parameter] public Anchor Anchor { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    [CascadingParameter] LayoutState LayoutState { get; set; }

}