@namespace MudBlazor
@inherits MudBaseSelectItem
@using Microsoft.AspNetCore.Components.Routing

<div @attributes="UserAttributes" class="@Classname" disabled="@Disabled" style="@Style">
    <NavLink @onclick="@HandleNavigation" 
             class="@LinkClassname" 
             style="@Style" 
             @attributes="@Attributes"
             Match="@Match" 
             ActiveClass="active">
        @if (!String.IsNullOrEmpty(Icon))
        {
            <MudIcon Icon="@Icon" Color="@IconColor" Class="mud-nav-link-icon"></MudIcon>
        }
        <div Class="mud-nav-link-text">
            @ChildContent
        </div>
    </NavLink>
</div>