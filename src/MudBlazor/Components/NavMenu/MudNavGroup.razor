@namespace MudBlazor
@inherits MudComponentBase

<div @attributes="UserAttributes" class="@Classname" disabled="@Disabled" style="@Style">
    <button @onclick="OnIsExpandedToggleAsync" tabindex="0" class="@ButtonClassname">
        @if (!string.IsNullOrEmpty(Icon))
        {
            <MudIcon Icon="@Icon" Color="@IconColor" Class="@IconClassname" />
        }
        <div Class="mud-nav-link-text">
            @Title
        </div>
        @if (!HideExpandIcon)
        {
            <MudIcon Icon="@ExpandIcon" class="@ExpandIconClassname" />
        }
    </button>
    <MudCollapse IsExpanded="@IsExpanded" MaxHeight="@MaxHeight" Class="mud-navgroup-collapse">
        <MudNavMenu>
            @ChildContent
        </MudNavMenu>
    </MudCollapse>
</div>