@namespace MudBlazor
@typeparam TItem

<CascadingValue Value="@MudTreeRoot" IsFixed="true">
    <CascadingValue Value="@MudTreeItemParent" IsFixed="true">
        @if (SubItems != null)
        {
            @foreach (var item in SubItems)
            {
                @ChildContent((TItem)item)
            }
        }
        else if (Items != null)
        {
            @foreach (var item in Items)
            {
                @ChildContent(item)
            }
        }
    </CascadingValue>
</CascadingValue>
