@namespace MudBlazor
@inherits MudBaseButton
@using MudBlazor.Extensions

@* @porkopek TODO add @ref="_elementReference"*@
<MudElement HtmlTag="@HtmlTag"
            Class="@Classname" 
            Style="@Style"
            @attributes="UserAttributes" 
            @onclick="OnClickHandler"
            type="@ButtonType.ToDescriptionString()" 
            href="@Link" 
            target="@Target"
            rel="@(Target=="_blank"?"noopener":null)"
            disabled="@Disabled"
            onpointerdown="@(!DisableRipple ? "ripplet(arguments[0])" : "")">

        @if (!String.IsNullOrEmpty(Icon))
        {
        <span class="mud-icon-button-label">
            <MudIcon Icon="@Icon" Size="@Size" />
        </span>
        }else
        {
            <MudText Typo="Typo.body2" Color="Color.Inherit">@ChildContent</MudText>
        }

</MudElement>
