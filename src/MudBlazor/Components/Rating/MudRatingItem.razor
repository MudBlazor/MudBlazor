@namespace MudBlazor
@inherits MudComponentBase

@if (ReadOnly)
{
    <span role="radio" class="@ClassName" style="@Style">
        <MudIcon Icon="@ItemIcon" Color="@Color" Size="@Size"></MudIcon>
    </span>
}
else
{
    <span role="radio" class="@ClassName" style="@Style" @onpointerover="HandlePointerOverAsync" @onclick="HandleClickAsync" @onpointerout="HandlePointerOutAsync">
        <input class="mud-rating-input" type="radio" tabindex="-1" value="@ItemValue" name="@Rating?.Name" disabled="@Disabled" checked="@(Checked)" @attributes="UserAttributes" />
        <MudIcon Icon="@ItemIcon" Color="@Color" Size="@Size"></MudIcon>
    </span>
}
