@namespace MudBlazor
@inherits MudComponentBase
@typeparam T

<div class="@Classname" style="@Style"
	 ondragover="event.preventDefault();" ondragstart="event.dataTransfer.setData('', event.target.id);"
	 @ondrop="HandleDrop"
	 @ondragenter="HandleDragEnter"
	 @ondragleave="HandleDragLeave"
	 @attributes="UserAttributes">

	@ChildContent
	
	@foreach (var item in GetItems())
	{
		<MudDynamicDropItem T="T" Item="item" HideOnDrag="HideItemOnDrag" OnDragStarted="DragOperationStarted" OnDragFinished="FinishedDragOperation" OnDragCancelled="FinishedDragOperation">
			@{
				var renderer = GetItemTemplate();
			}

			@renderer(item)

		</MudDynamicDropItem>
	}
</div>

