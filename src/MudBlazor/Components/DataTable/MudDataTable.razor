@namespace MudBlazor
@typeparam T 
@inherits MudComponentBase

@if (ServerData != null || (_items != null && _items.Any()))
{
<MudTable @ref="mudTable" Items="@_items" Class="@Classname" Style="@Style" ShowFooter="@ShowFooter" 
          Hover="@Hover" Breakpoint="@Breakpoint" ReadOnly="@ReadOnly" FixedHeader="@FixedHeader" Height="@Height" 
          @bind-RowsPerPage ="RowsPerPage" @bind-CurrentPage="CurrentPage"  ServerData="@ServerData">
    <HeaderContent>
        <CascadingValue Value="MudBaseColumn.Rendermode.Header" Name="Mode">
            @Columns(Def)
        </CascadingValue>
    </HeaderContent>
    <RowTemplate>
        <CascadingValue Value="MudBaseColumn.Rendermode.Item" Name="Mode">
            @Columns(context)
        </CascadingValue>
    </RowTemplate>
    <RowEditingTemplate>
        @if (!ReadOnly)
            {
<CascadingValue Value="MudBaseColumn.Rendermode.Edit" Name="Mode">
    @Columns(context)
</CascadingValue>}
    </RowEditingTemplate>
    <FooterContent>
        @if (ShowFooter)
        {
        <CascadingValue Value="MudBaseColumn.Rendermode.Footer" Name="Mode">
            @Columns(Def)
        </CascadingValue>
        }
    </FooterContent>
    <PagerContent>
    @if (Pageing)
    {
    <MudTablePager  Style="float:left"></MudTablePager>
    }
        </PagerContent>
    </MudTable> 
    }
    else if (EmptyDataText != null)
    {
        @EmptyDataText
    }

