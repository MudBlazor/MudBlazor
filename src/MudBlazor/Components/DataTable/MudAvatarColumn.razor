@typeparam T
@namespace MudBlazor
@inherits MudBaseColumn
@if (Visible)
{
    @if (Mode == Rendermode.Header)
    {
        <MudTh>@HeaderText</MudTh>
    }
    else if (Mode == Rendermode.Item || Mode == Rendermode.Edit)
    {
        <MudAvatar>@Value.ToString()</MudAvatar>
    }
    else if (Mode == Rendermode.Footer)
    {
        <MudTd></MudTd>
    }
}

@code {

    [Parameter]
    public T Value { get; set; }
}
