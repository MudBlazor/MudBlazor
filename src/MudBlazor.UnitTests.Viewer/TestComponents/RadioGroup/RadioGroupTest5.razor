@namespace MudBlazor.UnitTests.TestComponents

<MudRadioGroup @bind-Value="@option" @bind-Value:after="BindAfter">
    <MudRadio Value="@("1")" />
    <MudRadio Value="@("2")" />
    <MudRadio Value="@("3")" />
</MudRadioGroup>

<MudButton OnClick="OnClick" />

@code {
    public static string __description__ = "RadioGroup should be resettable";

    string option;

    private void OnClick()
    {
        option = null;
    }

    private void BindAfter() => BindAfterCount++;
    public int BindAfterCount { get; private set; }
}
