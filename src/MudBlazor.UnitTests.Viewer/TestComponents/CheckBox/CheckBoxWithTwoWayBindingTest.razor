@typeparam T

<MudCheckBox T="@T"
             Color="@Color"
             Disabled="@Disabled"
             TriState="@TriState"
             UncheckedColor="@UncheckedColor"
             @bind-Value="@Value" />

@code {
    [Parameter]
    public Color Color { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public bool TriState { get; set; }

    [Parameter]
    public Color UncheckedColor { get; set; }

    [Parameter]
    public T Value { get; set; }
}