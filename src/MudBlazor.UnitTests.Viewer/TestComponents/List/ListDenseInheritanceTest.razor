@namespace MudBlazor.UnitTests.TestComponents

<MudList T="string" Dense="Dense">
    <MudListSubheader>
        Drinks
    </MudListSubheader>
    <MudListItem T="string" Text="Sparkling Water" />
    <MudListItem T="string" Text="Teas" InitiallyExpanded="true">
        <NestedList>
            <MudListItem T="string" Text="Earl Grey" />
            <MudListItem T="string" Text="Matcha" />
            <MudListItem T="string" Text="Pu'er" />
        </NestedList>
    </MudListItem>
    <MudListItem T="string" Text="Coffees" Dense="InnerListDense">
        <NestedList>
            <MudListItem T="string" Text="Irish Coffee" />
            <MudListItem T="string" Text="Double Espresso" />
            <MudListItem T="string" Text="Cafe Latte" />
        </NestedList>
    </MudListItem>
</MudList>

@code
{
    [Parameter] public bool Dense { get; set; }

    [Parameter] public bool? InnerListDense { get; set; }

    public static string __description__ = "The child lists are dense when the parent list is dense.";
}