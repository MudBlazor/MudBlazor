@namespace MudBlazor.UnitTests.TestComponents

<MudList T="string" Clickable Color="Color" @bind-SelectedValue="selectedValue">
    <MudListSubheader>
        Your drink:
        <MudChip T="string" Color="Color.Secondary">
            @(selectedValue ?? "You are dry")
        </MudChip>
    </MudListSubheader>
    <MudListItem T="string" Text="Sparkling Water" />
    <MudListItem T="string" Text="Teas">
        <NestedList>
            <MudListItem T="string" Text="Earl Grey" />
            <MudListItem T="string" Text="Matcha" />
            <MudListItem T="string" Text="Pu'er" />
        </NestedList>
    </MudListItem>
    <MudListItem T="string" Text="Coffees">
        <NestedList>
            <MudListItem T="string" Text="Irish Coffee" />
            <MudListItem T="string" Text="Double Espresso" />
            <MudListItem T="string" Text="Cafe Latte" />
        </NestedList>
    </MudListItem>
</MudList>

@code
{
    public static string __description__ = "Sparkling Water should be selected initially.";
    private string selectedValue = "Sparkling Water";

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    public void SetSelectedValue(string value)
    {
        selectedValue = value;
        StateHasChanged();
    }
}