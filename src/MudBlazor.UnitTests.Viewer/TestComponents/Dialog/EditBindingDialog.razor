@namespace MudBlazor.UnitTests.TestComponents

<MudDialog Class="binding-dialog">
    <DialogContent>
        <MudNumericField T="decimal?" @bind-Value="UncommittedDose" Immediate />
    </DialogContent>

    <DialogActions>
        <MudButton Class="submit-button" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private Medication _med;

    [CascadingParameter]
    public MudDialogInstance MudDialog { get; set; }

#pragma warning disable BL0007
    [Parameter]
    public Medication Med
    {
        get => _med;
        set
        {
            _med = value;
            UncommittedDose = value.Dose;
        }
    }
#pragma warning restore CS0618

    public decimal? UncommittedDose { get; set; }

    private void Submit()
    {
        Med.Dose = UncommittedDose;
        Med.Taken = UncommittedDose != null && UncommittedDose != decimal.Zero;
        MudDialog.Close(DialogResult.Ok(true));
    }

    public record Medication
    {
        public decimal? Dose { get; set; }
        public bool? Taken { get; set; }
    }
}