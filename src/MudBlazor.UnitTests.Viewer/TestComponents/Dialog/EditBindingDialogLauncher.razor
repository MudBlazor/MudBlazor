@namespace MudBlazor.UnitTests.TestComponents
@inject IDialogService DialogService

<MudDialogProvider />

<MudLink OnClick="OpenDialogAsync">
    Open Dialog
</MudLink>

@code {
    [Parameter]
    public EditBindingDialog.Medication Med { get; set; }

    public async Task OpenDialogAsync()
    {
        var parameters = new DialogParameters<EditBindingDialog> { { x => x.Med, Med } };
        await DialogService.Show<EditBindingDialog>(string.Empty, parameters).Result;
    }
}