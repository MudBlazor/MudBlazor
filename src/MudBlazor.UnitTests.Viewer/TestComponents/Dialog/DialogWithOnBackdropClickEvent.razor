@using MudBlazor.Interfaces
<MudDialog OnBackdropClick="@OnBackdropClick">
    <TitleContent>
        Title: @textTest
    </TitleContent>
</MudDialog>


@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    string textTest;

    void OnBackdropClick()
    {
        textTest = "Backdrop clicked";
        ((IMudStateHasChanged)MudDialog).StateHasChanged();
    }
}