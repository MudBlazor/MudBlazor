@namespace MudBlazor.UnitTests.TestComponents

@if (FormatFirst)
{
    <MudDateRangePicker DateFormat="yyyy MMMM dd" DateRange="@(DateRange)"/>
}
else
{
    <MudDateRangePicker DateRange="@(DateRange)" DateFormat="yyyy MMMM dd"/>
}

@code {

    [Parameter, EditorRequired]
    public required DateRange DateRange { get; set; }

    [Parameter]
    public bool FormatFirst { get; set; }

}