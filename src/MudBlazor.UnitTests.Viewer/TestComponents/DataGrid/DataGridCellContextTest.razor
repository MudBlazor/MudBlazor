@namespace MudBlazor.UnitTests.TestComponents

<MudDataGrid T="Model" Items="@_items">
    <Columns>
        <Column T="Model" Field="@nameof(Model.Name)" FieldType="typeof(string)" />
        <Column T="Model" Field="@nameof(Model.Age)" FieldType="typeof(int)" />
    </Columns>
</MudDataGrid>

@code {
    private IEnumerable<Model> _items = new List<Model>()
    {
        new Model("John", 45), 
        new Model("Johanna", 23), 
        new Model("Steve", 32)
    };

    public record Model(string Name, int Age);
}
