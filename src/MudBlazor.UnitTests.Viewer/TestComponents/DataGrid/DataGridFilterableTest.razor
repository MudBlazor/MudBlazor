    <Columns>
        <Column T="Item" Field="@nameof(Item.Name)" Filterable="true" />
    </Columns>
</MudDataGrid>

@code {
    private IEnumerable<Item> _items = new List<Item>()
    {
        new Item("B"), 
        new Item("A"), 
        new Item("C"),
        new Item("C")
