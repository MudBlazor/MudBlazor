<MudDataGrid Items="@_items" Sortable="true" Filterable="true">
    <Columns>
        <Column T="IDictionary<string, object>" Field="Name" />
        <Column T="IDictionary<string, object>" Field="Age" />
        <Column T="IDictionary<string, object>" Field="Status" />
        <Column T="IDictionary<string, object>" Field="Hired" />
        <Column T="IDictionary<string, object>" Field="HiredOn" />
