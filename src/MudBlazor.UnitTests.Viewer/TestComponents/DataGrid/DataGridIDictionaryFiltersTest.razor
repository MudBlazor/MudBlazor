@namespace MudBlazor.UnitTests.TestComponents
<MudPopoverProvider></MudPopoverProvider>

<MudDataGrid Items="@_items" Filterable="true">
    <Columns>
        <Column T="IDictionary<string, object>" Field="Name" FieldType="typeof(string)" />
        <Column T="IDictionary<string, object>" Field="Age" FieldType="typeof(int)" />
        <Column T="IDictionary<string, object>" Field="Status" FieldType="typeof(Severity)" />
        <Column T="IDictionary<string, object>" Field="Hired" FieldType="typeof(bool)" />
        <Column T="IDictionary<string, object>" Field="HiredOn" FieldType="typeof(DateTime)" />
    </Columns>
</MudDataGrid>

@code {
    private IEnumerable<IDictionary<string, object>> _items = new List<IDictionary<string, object>>
    {
        new Dictionary<string, object> { { "Name", "Sam" }, { "Age", 56 }, { "Status", Severity.Normal }, { "Hired", false }, { "HiredOn", null } },
        new Dictionary<string, object> { { "Name", "Alicia" }, { "Age", 54 }, { "Status", Severity.Info }, { "Hired", null }, { "HiredOn", null } },
        new Dictionary<string, object> { { "Name", "Ira" }, { "Age", 27 }, { "Status", Severity.Success }, { "Hired", true }, { "HiredOn", new DateTime(2011, 1, 2) } },
        new Dictionary<string, object> { { "Name", "John" }, { "Age", 32 }, { "Status", Severity.Warning }, { "Hired", false }, { "HiredOn", null } },
    };
}
