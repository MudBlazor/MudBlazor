@namespace MudBlazor.UnitTests.TestComponents

<MudDataGrid Items="@_items" Sortable="true">
    <Columns>
        <Column T="Item" Field="@nameof(Item.Name)" />
        <Column T="Item" Field="@nameof(Item.Value)" />
        <Column T="Item" Field="@nameof(Item.DateCreated)" />
    </Columns>
</MudDataGrid>

@code {
    public static string __description__ = "Test in-browser-sorting of DataGrid. Hold <Ctrl> key when clicking header to extend to multi sort. Hold <Alt> key to unsort a sorted column";


    private IEnumerable<Item> _items = new List<Item>()
    {
        new Item("B", 42, DateTime.Now), 
        new Item("A", 73, DateTime.Now.AddDays(42)), 
        new Item("A", 11, DateTime.Now.AddDays(10)), 
        new Item("C", 4711, DateTime.Now.AddDays(73)),
        new Item("A", 99, DateTime.Now.AddDays(4)), 
        new Item("C", 4712, DateTime.Now.AddDays(2)),
        new Item("C", 4713, DateTime.Now.AddDays(10))
    };

    public class Item
    {
        public string Name { get; set; }
        public int Value { get; set; }
        public DateTime DateCreated { get; set; }

        public Item(string name, int value, DateTime created)
        {
            Name = name;
            Value = value;
            DateCreated = created;
        }
    }

}
