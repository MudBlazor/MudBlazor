@namespace MudBlazor.UnitTests.TestComponents

<MudChipSet @bind-SelectedValues="_selected" MultiSelection="true">
    <MudChip Value="@("Milk")"></MudChip>
    <MudChip Value="@("Eggs")"></MudChip>
    <MudChip Value="@("Soap")"></MudChip>
    <MudChip Value="@("Corn flakes")"></MudChip>
    <MudChip Value="@("Salad")"></MudChip>
    <MudChip Value="@("Apples")"></MudChip>
    <MudChip Value="@("Red wine")"></MudChip>
</MudChipSet>


@if (_selected != null && _selected.Count > 0) {
    <MudText>@string.Join(", ", _selected.OrderBy(x => x))</MudText>
}
else {
    <MudText>Nothing selected.</MudText>
}
<MudButton OnClick="SetNull">Set Null</MudButton>
<MudButton OnClick="SetEmpty">Set Empty</MudButton>
@code
{
    private ICollection<string> _selected;

    private void SetNull()
    {
        _selected = null;
    }

    private void SetEmpty()
    {
        _selected = Array.Empty<string>();
    }
}