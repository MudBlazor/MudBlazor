@namespace MudBlazor.UnitTests.TestComponents

<MudChipSet T="string" @bind-SelectedChips="selected" MultiSelection="@MultiSelection" Filter="filter">
    <MudChip T="string" Text="Milk"></MudChip>
    <MudChip T="string" Text="Eggs" Default="true"></MudChip>
    <MudChip T="string" Text="Soap"></MudChip>
    <MudChip T="string" Text="Corn flakes"></MudChip>
    <MudChip T="string" Text="Salad" Default="true"></MudChip>
    <MudChip T="string" Text="Apples"></MudChip>
    <MudChip T="string" Text="Red wine"></MudChip>
</MudChipSet>


@if (selected != null && selected.Length>0)
{
    <MudText>@string.Join(", ", selected.Select(chip=>chip.Text).OrderBy(x => x))</MudText>
}
else
{
    <MudText>Nothing selected.</MudText>
}
<MudCheckBox @bind-Checked="filter">Filter</MudCheckBox>
@code
{
    [Parameter] public bool MultiSelection { get; set; }
    bool filter = false;
    MudChip<string>[] selected;
}