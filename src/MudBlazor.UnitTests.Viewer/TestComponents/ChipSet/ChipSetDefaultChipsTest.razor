@namespace MudBlazor.UnitTests.TestComponents

<MudChipSet @bind-SelectedChips="selected" MultiSelection="@MultiSelection" Filter="filter">
    <MudChip Text="Milk" Value="0"></MudChip>
    <MudChip Text="Eggs" Default="true" Value="1"></MudChip>
    <MudChip Text="Soap" Value="2"></MudChip>
    <MudChip Text="Corn flakes" Value="3"></MudChip>
    <MudChip Text="Salad" Default="true" Value="4"></MudChip>
    <MudChip Text="Apples" Value="5"></MudChip>
    <MudChip Text="Red wine" Value="6"></MudChip>
</MudChipSet>


@if (selected != null && selected.Length>0)
{
    <MudText>@string.Join(", ", selected.Select(chip=>chip.Text).OrderBy(x => x))</MudText>
}
else
{
    <MudText>Nothing selected.</MudText>
}
<MudCheckBox @bind-Checked="filter">Filter</MudCheckBox>
@code
{
    [Parameter] public bool MultiSelection { get; set; }
    bool filter = false;
    MudChip<int>[] selected;
}