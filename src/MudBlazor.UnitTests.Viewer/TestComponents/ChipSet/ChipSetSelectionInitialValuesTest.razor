<MudChipSet T="int" MultiSelection="true" Filter="true" Mandatory="false" @bind-SelectedChips="selectedChips" @bind-SelectedValues="selectedValues">
    <MudChip T="int" Text="Chip1" Value="1" Default="true"></MudChip>
    <MudChip T="int" Text="Chip2" Value="2"></MudChip>
    <MudChip T="int" Text="Chip3" Value="3"></MudChip>
    <MudChip T="int" Text="Chip4" Value="4" Default="false"></MudChip>
</MudChipSet>


<br />
<p class="sel">
    Selection: @(string.Join(", ", (selectedChips??new MudChip<int>[0]).OrderBy(chip=> chip.Text).Select(chip=> chip.Text)))
</p>


@code {
    public static string __description__ = "The initial selectedValues collection should be applied but will be overridden by Chip.Default";
    MudChip<int>[] selectedChips;
    ICollection<int> selectedValues = new List<int>() { 3, 4 };

}
