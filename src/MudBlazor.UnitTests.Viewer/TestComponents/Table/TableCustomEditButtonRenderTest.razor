@namespace MudBlazor.UnitTests.TestComponents

<MudTable @ref="Table" T="string" Items="items" EditTrigger="TableEditTrigger.Manual" EditButtonPosition="ButtonPosition" ApplyButtonPosition="ButtonPosition">
    <HeaderContent>
        <MudTh>#</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            <div>
                @context
            </div>
        </MudTd>
    </RowTemplate>
    <RowEditingTemplate>
        <MudTd>
            <MudTextField T="string" @bind-Value="@context"></MudTextField>
        </MudTd>
    </RowEditingTemplate>
    <EditButtonContent Context="button">
        <MudIconButton Size="@Size.Small" Icon="@Icons.Outlined.Edit" Class="pa-0" OnClick="button.ButtonAction" Disabled="button.ButtonDisabled" />
    </EditButtonContent>
</MudTable>

@code {
    public static string __description__ = "Inline Edit Table: Custom edit button content";
    string[] items = new string[] { "A", "B", "C" };
    [Parameter]
    public TableButtonPosition ButtonPosition { get; set; }

    public MudTable<string> Table { get; private set; }
}
