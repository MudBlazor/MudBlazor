@namespace MudBlazor.UnitTests.TestComponents

<MudTable @ref="Table" T="string" Items="items" @bind-SelectedItem="selectedItem" IsEditRowSwitchingBlocked="true">
    <HeaderContent>
        <MudTh>#</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context</MudTd>
    </RowTemplate>
    <RowEditingTemplate>
        <MudTd>
            <MudTextField T="string" @bind-Value="@context"></MudTextField>
        </MudTd>
    </RowEditingTemplate>
</MudTable>

@code {
    public static string __description__ = "Inline Edit Table w/ Blocked Row Switching";

    private string selectedItem = null;
    string[] items = new string[] { "A", "B", "C" };

    public MudTable<string> Table { get; private set; } 
}
