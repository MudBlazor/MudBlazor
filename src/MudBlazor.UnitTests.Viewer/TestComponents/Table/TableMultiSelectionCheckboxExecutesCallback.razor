@namespace MudBlazor.UnitTests.TestComponents

<MudText>SelectedItems { @string.Join(", ", selectedItems) }</MudText>
<MudTable T="int" Items="items" @bind-SelectedItems="selectedItems" MultiSelection="true"
          OnRowClick="GotClicked">
    <HeaderContent>
        <MudTh>#</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context</MudTd>
    </RowTemplate>
</MudTable>

@code
{
    public static string __description__ = "the selected items (check-box click or row click) should be represented in SelectedItems.";

    int[] items = new int[] { 1 };
    HashSet<int> selectedItems = new HashSet<int>();

    private void GotClicked<T>(TableRowClickEventArgs<T> args)
    {
        selectedItems.Add(2);
        selectedItems.Add(3);
        selectedItems.Add(4);
        selectedItems.Add(5);
        selectedItems.Add(6);
    }
}
