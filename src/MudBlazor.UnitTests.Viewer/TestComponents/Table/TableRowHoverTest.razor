@namespace MudBlazor.UnitTests.TestComponents

<MudTable T="string" Items="items" OnRowPointerEnter="@(args => OnRowPointerEnter(args))" OnRowPointerLeave="@(args => OnRowPointerLeave(args))">
    <RowTemplate>
        <MudTd>@context</MudTd>
    </RowTemplate>
</MudTable>

<p>
    Current: '@(currentlyHoveredItem)', last: '@(lastHoveredItem)'
</p>

@code {
    public static string __description__ = @"
        OnRowPointerEnter should be called whenever a row (<tr>) starts being hovered (onpointerenter).
        OnRowPointerLeave should be called whenever a row (<tr>) stops being hovered (onpointerleave).
        The paragraph (<p>) should be refreshed with the current and last hovered element.
        ";

    string[] items = new string[] { "A", "B" };

    string currentlyHoveredItem = string.Empty;
    string lastHoveredItem = string.Empty;

    private void OnRowPointerEnter(TableRowHoverEventArgs<string> args)
    {
        currentlyHoveredItem = args.Item;
    }

    private void OnRowPointerLeave(TableRowHoverEventArgs<string> args)
    {
        currentlyHoveredItem = string.Empty;
        lastHoveredItem = args.Item;
    }
}
