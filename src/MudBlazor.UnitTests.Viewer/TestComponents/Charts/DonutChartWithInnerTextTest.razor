<MudChart 
    ChartType="ChartType.Donut" 
    Width="300px" 
    Height="300px" 
    InputData="@data" 
    InputLabels="@labels"
    ChartOptions="@options">
</MudChart>


@code {
    public static string __description__ = "Donut Chart with Inner Text.";
    public double[] data = { 10, 420, 20, 69 };
    public string[] labels = { "Data 1", "Data 2", "Data 3", "Data 4" };

    public ChartOptions options { get; set; }

    protected override void OnInitialized()
    {
       options = new ChartOptions() { DonutInnerText= data.Sum().ToString(), DonutInnerTextSize = 8 };
    }
}