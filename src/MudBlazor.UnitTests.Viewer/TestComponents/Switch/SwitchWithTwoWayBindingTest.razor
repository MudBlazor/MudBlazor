<MudSwitch @ref="@Switch"
           T="bool"
           Color="@Color"
           Disabled="@Disabled"
           UncheckedColor="@UncheckedColor"
           @bind-Value="@Value" />

@code {
    [Parameter]
    public Color Color { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public Color UncheckedColor { get; set; }

    [Parameter]
    public bool Value { get; set; }

    [Parameter]
    public MudSwitch<bool> Switch { get; set; }
}