@namespace MudBlazor.UnitTests.TestComponents


<MudTextField @bind-Value="Amount" Label="Amount" Variant="_variant" AdornmentStartIcon="@Icons.Material.Filled.AttachMoney" AdornmentEndIcon="@Icons.Material.Filled.Refresh" />

<MudTextField @bind-Value="Domain" Label="Domain" Variant="_variant" AdornmentStartText="https://" AdornmentEndText=".com" />

<MudTextField @bind-Value="Buttons" Label="Buttons" Variant="_variant" 
              AdornmentStartIcon="@_startInputIcon" OnAdornmentStartClick="StartButtonTestClick" AdornmentStartAriaLabel="Toggle Icon"
              AdornmentEndIcon="@_endInputIcon" OnAdornmentEndClick="EndButtonTestClick" AdornmentEndAriaLabel="Show Password" />

<MudSelect @bind-Value="_variant">
    <MudSelectItem Value="Variant.Outlined">Outlined</MudSelectItem>
    <MudSelectItem Value="Variant.Text">Text</MudSelectItem>
    <MudSelectItem Value="Variant.Filled">Filled</MudSelectItem>
</MudSelect>

@code
{
    public static string __description__ = "Test adornments on MudTextField";

    public string Amount { get; set; } = "";
    
    public string Domain { get; set; } = "";

    public string Buttons { get; set; } = "";

    private Variant _variant = Variant.Outlined;

    bool _isShowStart;
    string _startInputIcon = Icons.Material.Filled.Check;
    
    bool _isShowEnd;
    string _endInputIcon = Icons.Material.Filled.VisibilityOff;
    

    void StartButtonTestClick()
    {
        @if (_isShowStart)
        {
            _isShowStart = false;
            _startInputIcon = Icons.Material.Filled.Clear;
        }
        else {
            _isShowStart = true;
            _startInputIcon = Icons.Material.Filled.Check;
        }
    }

    void EndButtonTestClick()
    {
        @if (_isShowEnd)
        {
            _isShowEnd = false;
            _endInputIcon = Icons.Material.Filled.VisibilityOff;
        }
        else
        {
            _isShowEnd = true;
            _endInputIcon = Icons.Material.Filled.Visibility;
        }
    }
}
