<MudDivider />
<MudContainer>
    <div class="docs-footer">
        <MudGrid>
            <MudItem xs="12" sm="3">
                <h1>MudBlazor</h1>
            </MudItem>
            <MudItem xs="4" sm="3">
                <MudText>Community</MudText>
                <ul>
                    <li>
                        <MudLink Typo="Typo.body2" Href="https://discord.gg/mudblazor" Target="_blank">Discord</MudLink>
                    </li>
                    <li>
                        <MudLink Typo="Typo.body2" Href="https://github.com/MudBlazor/MudBlazor/discussions" Target="_blank">GitHub Discussions</MudLink>
                    </li>
                </ul>
            </MudItem>
            <MudItem xs="4" sm="3">
                <MudText>Contact</MudText>
                <ul>
                    <li>
                        <MudLink Typo="Typo.body2" Href="https://discordapp.com/users/170187378135269376/" Target="_blank">Discord</MudLink>
                    </li>
                    <li>
                        <MudLink Typo="Typo.body2" Href="mailto:jonny@gardnet.nu">Email</MudLink>
                    </li>
                </ul>
            </MudItem>
            <MudItem xs="4" sm="3">
                <MudText>Project</MudText>
                <ul>
                    <li>
                        <MudLink Typo="Typo.body2" Href="/project/about">About</MudLink>
                    </li>
                    <li>
                        <MudLink Typo="Typo.body2" Href="/project/credit">Credits</MudLink>
                    </li>
                </ul>
            </MudItem>
        </MudGrid>
        <MudText Typo="Typo.body2">Currently @MudBlazorVersion Released under the <MudLink Typo="Typo.body2" Href="https://github.com/MudBlazor/MudBlazor/blob/master/LICENSE" Target="_blank">MIT License.</MudLink> Copyright Â© 2020-2021 MudBlazor.</MudText>
    </div>
</MudContainer>

@code {
    string MudBlazorVersion
    {
        get
        {
            var v = typeof(MudText).Assembly.GetName().Version;
            return $"v{v.Major}.{v.Minor}.{v.Build}.";
        }
    }
}