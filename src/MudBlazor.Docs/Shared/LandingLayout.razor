@inherits LayoutComponentBase
@layout MainLayout

<MudLayout Class="mudblazor-landingpage">
    <MudAppBar Class="landing-appbar" Elevation="0">
        <Appbar/>
    </MudAppBar>
    <MudDrawer Open="@LayoutService.DrawerIsOpen" OpenChanged="@LayoutService.SetDrawer" Elevation="25" Variant="@DrawerVariant.Temporary">
        <MudToolBar Dense="true" DisableGutters="true" Class="px-1 docs-gray-bg">
            <MudIconButton Icon="@Icons.Rounded.Close" Color="Color.Inherit" OnClick="@LayoutService.ToggleDrawer"/>
            <MudSpacer/>
            <AppbarButtons/>
        </MudToolBar>
        <TopNavMenu/>
    </MudDrawer>
    <MudMainContent Class="pa-0">
        @Body
        <LandingFooter/>
    </MudMainContent>
</MudLayout>