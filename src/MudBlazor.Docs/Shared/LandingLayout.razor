@inherits LayoutComponentBase

<MudThemeProvider Theme="@_currentTheme"/>

<MudLayout Class="mudblazor-landingpage">
    <MudAppBar Elevation="25" DisableGutters="true">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudToolBar DisableGutters="true">
                <MudBlazorLogo Style="width:40px;" Class="mr-6"/>
                <MudButton Variant="Variant.Text" Class="mx-1">Documentation</MudButton>
                <MudButton Variant="Variant.Text" Class="mx-1">Components</MudButton>
                <MudButton Variant="Variant.Text" Class="mx-1">Products</MudButton>
                <MudSpacer />
                <MudTooltip Duration="1000" Text="@(_isDarkMode? "Switch to Light Theme" : "Switch to Dark Theme")">
                    <MudIconButton Icon="@(_isDarkMode? @Icons.Material.Outlined.LightMode : @Icons.Material.Outlined.DarkMode)" Color="Color.Inherit" OnClick="@((e) => DarkMode())" />
                </MudTooltip>
            </MudToolBar>
        </MudContainer>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


