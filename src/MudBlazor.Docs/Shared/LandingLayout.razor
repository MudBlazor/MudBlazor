@using System.Text.RegularExpressions
@inherits LayoutComponentBase
@layout MainLayout

<MudThemeProvider Theme="@_currentTheme"/>

<MudLayout Class="mudblazor-landingpage">
    <MudAppBar Class="landing-appbar" Elevation="0">
        <MudBlazorLogo Class="docs-mudblazor-logo"/>
        <MudText Color="Color.Primary" Typo="Typo.h5" Class="docs-brand-text d-none d-md-flex">MudBlazor</MudText>
        
        <MudButton Color="Color.Inherit" Variant="Variant.Text" Class="mx-1 px-3">Docs</MudButton>
        <MudButton Color="Color.Inherit" Variant="Variant.Text" Class="mx-1 px-3">Components</MudButton>
        <MudSpacer />
        
        <MudBadge Color="Color.Secondary" Dot="true" Overlap="true">
            <MudMenu Icon="@Icons.Outlined.Notifications" Color="Color.Inherit" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopCenter">
                <MudMenuItem>No Notifications</MudMenuItem>
            </MudMenu>
        </MudBadge>
        
        @*<MudTooltip Duration="1000" Text="@(_isDarkMode? "Switch to Light Theme" : "Switch to Dark Theme")">
            <MudIconButton Icon="@(_isDarkMode? @Icons.Rounded.LightMode : @Icons.Material.Outlined.DarkMode)" Color="Color.Inherit" OnClick="@((e) => DarkMode())" />
        </MudTooltip>*@
        @*<MudTooltip Duration="1000" Text="Toggle right-to-left/left-to-right">
            <MudIconButton Icon="@Icons.Material.Filled.FormatTextdirectionRToL" Color="Color.Inherit" />
        </MudTooltip>*@
        <MudTooltip Duration="1000" Text="GitHub Repository">
            <MudIconButton Link="https://github.com/MudBlazor/MudBlazor/" Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
        </MudTooltip>
        
        <MudIconButton Icon="@Icons.Outlined.Settings" Color="Color.Inherit" />
    </MudAppBar>
    <MudMainContent Class="pa-0">
        @Body
        <LandingFooter/>
    </MudMainContent>
</MudLayout>


