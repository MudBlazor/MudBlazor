<div class="mudblazor-sponsor">
    @if (String.IsNullOrWhiteSpace(Website))
    {
        <div class="mudblazor-sponsor-item">
            <img src="@($"_content/MudBlazor.Docs/images/sponsors/{NameAndImage}.png")" class="mudblazor-sponsor-image">
        </div>
    }
    else
    {
        <a class="mudblazor-sponsor-item" href="@Website" target="_blank">
            <img src="@($"_content/MudBlazor.Docs/images/sponsors/{NameAndImage}.png")" class="mudblazor-sponsor-image">
        </a>
    }
</div>

@code {
    [Parameter] public RenderFragment Childcontent { get; set; }
    [Parameter] public string Website { get; set; }
    [Parameter] public string NameAndImage { get; set; }
}