@namespace MudBlazor.Docs
@using MudBlazor.Utilities

<div class="@Classname">
    @ChildContent
</div>

@code {

    protected string Classname =>
    new CssBuilder("docs-content")
    .AddClass($"docs-content-full-width", ContentFullWidth)
    .AddClass($"docs-content-outlined", Outlined)
    .AddClass($"docs-content-darken", DarkenBackground)
    .AddClass($"docs-content-display-grid", DisplayGrid)
    .AddClass(Class)
    .Build();

    [Parameter] public string Class { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] public bool DarkenBackground { get; set; }

    [Parameter] public bool Outlined { get; set; }

    [Parameter] public bool ContentFullWidth { get; set; }

    [Parameter] public bool DisplayGrid { get; set; }
}