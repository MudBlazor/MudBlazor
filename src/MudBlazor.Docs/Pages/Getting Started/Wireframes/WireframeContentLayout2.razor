@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
        <MudAppBarSpacer />
        <MudIconButton Icon="@Icons.Material.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}


<div class="d-flex" style="position: absolute; bottom: 0; right: 0;">
    <MudFab Color="Color.Secondary" Icon="@Icons.Material.ArrowBack" Class="mt-auto mb-4 mr-4" Link="/getting-started/wireframes/" />
</div>
