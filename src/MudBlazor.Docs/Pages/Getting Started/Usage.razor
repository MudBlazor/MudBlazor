@page "/getting-started/usage"

<DocsPage MaxWidth="MaxWidth.Large">
    <MudContainer>
        <MudText Typo="Typo.h3">Usage</MudText>
        <MudText>After your installation is done, you can find some examples here.</MudText>
        <MudText Typo="Typo.h4">Quick Start</MudText>
        <MudText>This is literally all you need in your views to use MudBlazor components.</MudText>
        <MarkdownSegment Text="@Markdown_QuickStart" />
        <SectionContent Outlined="true" DisplayFlex="true">
            <MudText Typo="Typo.h6">MudBlazor is @Text</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ButtonOnClick">@ButtonText</MudButton>
        </SectionContent>
    </MudContainer>
    <MudContainer>
        <div style="padding-top:64px;">
            <MudText Typo="Typo.h6" Align="Align.Center">Check out all the components in the menu to find out whats available and how to use them.</MudText>
        </div>
    </MudContainer>
</DocsPage>
<Footer />

