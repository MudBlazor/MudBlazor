            </MudText>
            <MudButton Color="Color.Primary" Variant="Variant.Filled" DisableElevation="true" Size="Size.Large">Read More</MudButton>
            <MudButton Color="Color.Default" Variant="Variant.Filled" DisableElevation="true" Size="Size.Large">Get Started</MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>
