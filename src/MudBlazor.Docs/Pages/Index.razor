@page "/"



<MudContainer MaxWidth="MaxWidth.Medium" Class="docs-home">
    <MudBlazorLogo />
    <div class="docs-home-brand">
        <h1>MudBlazor</h1>
        <p>Blazor components for faster and easier web development.</p>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Link="/getting-started/installation">Get Started</MudButton>
    </div>
</MudContainer>
<MudContainer>
    <Grid>
        <Item xs="12" md="6">
            <MudPaper Elevation="99" Class="docs-home-paper">
                <div class="docs-home-title">
                    <svg class="mud-svg-icon-root" focusable="false" viewBox="0 0 24 24" aria-hidden="true"><path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"></path></svg>
                    <h2>Installation</h2>
                </div>
                <Typography Typo="Typo.subtitle1">Install MudBlazor via NuGet.</Typography>
                <MarkdownSegment Text="@Markdown_Install" />
                <Typography Typo="Typo.subtitle1">Link the css file in your _Host.cshtml or index.html</Typography>
                <MarkdownSegment  Text="@Markdown_Link" />
                <MudButton Variant="Variant.Text" Color="Color.Primary" Link="/getting-started/installation">Read installation docs</MudButton>
            </MudPaper>
        </Item>
        <Item xs="12" md="6">
            <MudPaper Elevation="99" Class="docs-home-paper">
                <div class="docs-home-title">
                    <svg class="mud-svg-icon-root" focusable="false" viewBox="0 0 24 24" aria-hidden="true"><path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"></path></svg>
                    <h2>Getting started</h2>
                </div>
                <Typography Typo="Typo.subtitle1">Add using tag to _Imports.razor or individual pages.</Typography>
                <MarkdownSegment Text="@Markdown_Using" />
                <Typography Typo="Typo.subtitle1">Usage</Typography>
                <MarkdownSegment Text="@Markdown_Usage" />
                <MudButton Variant="Variant.Text" Color="Color.Primary" Link="/getting-started/usage">Explore the docs</MudButton>
            </MudPaper>
        </Item>
    </Grid>
</MudContainer>
<MudContainer>
    <Typography Typo="Typo.h4" Align="Align.Center">Examples</Typography>
    <Typography Align="Align.Center">Use them as template for your project or just peak around see how we did stuff.</Typography>
    <div style="padding-top:64px; padding-bottom:64px;">
        <Typography Align="Align.Center">Comming soon...</Typography>
    </div>
</MudContainer>
<Footer />

@code {
string Markdown_Install = @"```html
dotnet add package MudBlazor
```";
string Markdown_Link = @"```html
<link href=""_content/MudBlazor/MudBlazor.min.css"" rel=""stylesheet""/>
```";
string Markdown_Using = @"```html
@using MudBlazor
```";
string Markdown_Usage = @"```html
<MudButton Color=""Color.Primary"">My Button</MudButton>
```";
}