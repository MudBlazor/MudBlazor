@page "/mud/announcements/{Id}"

<DocsPage MaxWidth="MaxWidth.Large" DisplayFooter="true">
    @if (_message == null)
    {
        <MudProgressCircular Color="Color.Default" Indeterminate="true" />
    }
    else
    {
        <DocsPageHeader Title="@_message.Title" />
        <DocsPageContent>
            <DynamicComponent Type="@_message.ContentComponent" />
        </DocsPageContent>
    }
</DocsPage>