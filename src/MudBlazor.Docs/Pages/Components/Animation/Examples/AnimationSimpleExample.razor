@namespace MudBlazor.Docs.Examples

<style>
 @@keyframes rubberBand {
    from {
        transform: scale3d(1, 1, 1);
    }
    30% {
        transform: scale3d(1.25, 0.75, 1);
    }
    75% {
        transform: scale3d(1.05, 0.95, 1);
    }
    to {
        transform: scale3d(1, 1, 1);
    }
}

 @@keyframes wobble {
    from {
        transform: translate3d(-5%, 0, 0) rotate3d(0, 0, 1, -1deg);
    }
    to {
    transform: translate3d(0, 0, 0);
    }
}
</style>
<MudCard Class="d-flex">
    <MudAnimation @ref="animationhost" Trigger="@AnimationTrigger.OnRender" KeyFrameName="@keyframename" Duration="@duration" TimmingFunction="@timmingFunc" Delay="@delay" Infinite="@infinite" Direction="@direction" Class="d-flex flex-grow-1 ma-2" >
        <svg class="mx-auto my-auto" viewBox="0 0 1653 1049" xmlns="http://www.w3.org/2000/svg">
            <path fill="#7467EF" d="M0.15,572.58V0.16L495.9,286.37v190.81L165.4,286.37v381.62L0.15,572.58z"></path>
            <path fill="#594AE2" d="M495.9,286.37L991.65,0.16v572.43l-330.5,190.81l-165.25-95.4l330.5-190.81V286.37L495.9,477.18V286.37z"></path>
            <path fill="#7467EF" d="M495.9,667.99V858.8l330.5,190.81V858.8L495.9,667.99z"></path>
            <path fill="#594AE2" d="M826.4,1049.6l495.75-286.21V0.37l-165.25,95.4v572.21L826.4,858.8V1049.6z"></path>
            <path fill="#7467ef" d="M1495,467.85l-165.25,95.41,157.47,91.52,165.25-95.38Z"></path>
            <path fill="#7467EF" d="M1322.15,763.39l-165.25,95.4l330.5,190.81V858.8L1322.15,763.39z"></path>
            <path fill="#7467EF" d="M1322.13,0.38l-165.25,95.4l330.29,190.83l165.25-95.38L1322.13,0.38z"></path>
            <path fill="#594AE2" d="M1652.43,191.21l-165.25,95.41v762.99l165.25-95.4L1652.43,191.21z"></path>
        </svg>

    </MudAnimation>
    <MudCard Elevation="0" Style="min-width:300px;">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Parameters</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudSelect @bind-Value="keyframename" Label="Key Frame Name:">
                <MudSelectItem Value="Transitions.Fade">Fade (In-built)</MudSelectItem>
                <MudSelectItem Value="Transitions.Pulse">Pulse (In-built)</MudSelectItem>
                <MudSelectItem Value="customkeyframe_rubberband">RubberBand (User defined)</MudSelectItem>
                <MudSelectItem Value="customkeyframe_wobble">Wobble (User defined)</MudSelectItem>
            </MudSelect>
            <MudTextField @bind-Value="duration" Label="Duration (ms):" />
            <MudSelect @bind-Value="timmingFunc" Label="Timming Function:">
                <MudSelectItem Value="AnimationTimmingFunc.ease">Ease</MudSelectItem>
                <MudSelectItem Value="AnimationTimmingFunc.ease_in">Ease In</MudSelectItem>
                <MudSelectItem Value="AnimationTimmingFunc.ease_in_out">Ease In-Out</MudSelectItem>
                <MudSelectItem Value="AnimationTimmingFunc.ease_out">Ease Out</MudSelectItem>
            </MudSelect>
            <MudTextField @bind-Value="delay" Label="Delay (ms):" />
            <MudSelect @bind-Value="direction" Label="Direction:">
                <MudSelectItem Value="AnimationDirection.normal">Normal</MudSelectItem>
                <MudSelectItem Value="AnimationDirection.alternate">Alternate</MudSelectItem>
                <MudSelectItem Value="AnimationDirection.reverse">Reverse</MudSelectItem>
                <MudSelectItem Value="AnimationDirection.alternate_reverse">Alternate Reverse</MudSelectItem>
            </MudSelect>
            <MudCheckBox @bind-Checked="infinite">Inifinite</MudCheckBox>
        </MudCardContent>
        <MudBlazor.MudCardActions>
            <MudButton Variant="@Variant.Text" Color="@Color.Primary" OnClick="() => animationhost.TriggerAnimation()" StartIcon="@Icons.Material.Filled.PlayArrow">Run</MudButton>
        </MudBlazor.MudCardActions>
    </MudCard>
</MudCard>

@code {

    private string keyframename = Transitions.Fade;
    private int duration = 1000;
    private AnimationTimmingFunc timmingFunc = AnimationTimmingFunc.ease_in;
    private int delay = 0;
    private bool infinite = false;
    private AnimationDirection direction = AnimationDirection.normal;

    private MudAnimation animationhost;

    private string customkeyframe_rubberband = "rubberBand";
    private string customkeyframe_wobble = "wobble";
 }