@namespace MudBlazor.Docs.Examples

<MudDialog TitleClass="mud-primary" ClassContent="mud-secondary" ClassActions="mud-tertiary">
    <DialogContent>
        Dialog Content
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}