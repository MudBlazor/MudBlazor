@page "/components/inputs/switch"

<DocsPage>
    <DocsPageHeader>
        <Title>Switch</Title>
        <SubTitle></SubTitle>
    </DocsPageHeader>
    <DocsPageContent>
        <DocsPageSection>
            <SectionHeader>
                <Title>Basic switches</Title>
                <Description></Description>
            </SectionHeader>
            <SectionContent Outlined="true">
                <Switch @bind-Checked="@Basic_Switch1" />
                <Switch @bind-Checked="@Basic_Switch2" Color="Color.Primary" />
                <Switch @bind-Checked="@Basic_Switch2" Color="Color.Secondary" />
                <Switch Disabled="true" />
            </SectionContent>
            <SectionSource Code="@Markdown_Basic"></SectionSource>
        </DocsPageSection>
        <DocsPageSection>
            <SectionHeader>
                <Title>Switch with label</Title>
                <Description></Description>
            </SectionHeader>
            <SectionContent Outlined="true">
                <Switch @bind-Checked="@Basic_Switch1" Label="Default" />
                <Switch @bind-Checked="@Basic_Switch2" Label="Primary" Color="Color.Primary" />
                <Switch @bind-Checked="@Basic_Switch2" Label="Secondary" Color="Color.Secondary" />
                <Switch Disabled="true" Label="Disabled" />
            </SectionContent>
            <SectionSource Code="@Markdown_Label"></SectionSource>
        </DocsPageSection>
    </DocsPageContent>
</DocsPage>


@code {
    public bool Basic_Switch1 { get; set; } = false;
    public bool Basic_Switch2 { get; set; } = true;
    public bool Basic_Switch3 { get; set; } = true;

string Markdown_Basic = @"```html
<Switch @bind-Checked=""@Basic_CheckBox1""></Switch>
<Switch @bind-Checked=""@Basic_CheckBox2"" Color=""Color.Primary""></Switch>
<Switch @bind-Checked=""@Basic_CheckBox1"" Color=""Color.Secondary""></Switch>
<Switch @bind-Checked=""@Basic_CheckBox1"" Disabled=""true""></Switch>
```";

string Markdown_Label = @"```html
<Switch @bind-Checked=""@Basic_CheckBox1""></Switch>
<Switch @bind-Checked=""@Basic_CheckBox2"" Color=""Color.Primary""></Switch>
<Switch @bind-Checked=""@Basic_CheckBox1"" Color=""Color.Secondary""></Switch>
<Switch @bind-Checked=""@Basic_CheckBox1"" Disabled=""true""></Switch>
```";
}
