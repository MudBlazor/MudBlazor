@page "/components/inputs/button"


<DocsPage>
    <Container>
        <Typography Typo="Typo.h3">Button</Typography>
        <Typography Typo="Typo.h4">Contained Buttons</Typography>
        <DocsContent Outlined="true">
            <Button Variant="Variant.Contained">Default</Button>
            <Button Variant="Variant.Contained" Color="Color.Primary">Primary</Button>
            <Button Variant="Variant.Contained" Color="Color.Secondary">Secondary</Button>
            <Button Variant="Variant.Contained" Disabled="true">Disabled</Button>
        </DocsContent>
        <MarkdownSegment Text="@Markdown_Contained" />
        <Typography>You can remove the elevation with the disableElevation prop.</Typography>
        <DocsContent Outlined="true">
            <Button Variant="Variant.Contained" Color="Color.Primary" DisableElevation="true">Primary</Button>
        </DocsContent>
        <MarkdownSegment Text="@Markdown_DisabledElevation" />
    </Container>
    <Container>
        <Typography Typo="Typo.h4">Text Buttons</Typography>
        <DocsContent Outlined="true">
            <Button Variant="Variant.Text">Default</Button>
            <Button Variant="Variant.Text" Color="Color.Primary">Primary</Button>
            <Button Variant="Variant.Text" Color="Color.Secondary">Secondary</Button>
            <Button Variant="Variant.Text" Disabled="true">Disabled</Button>
        </DocsContent>
        <MarkdownSegment Text="@Markdown_Text" />
