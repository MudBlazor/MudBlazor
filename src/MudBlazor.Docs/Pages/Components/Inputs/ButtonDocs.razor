            <Button Variant="Variant.Outlined" Color="Color.Secondary">Secondary</Button>
            <Button Variant="Variant.Outlined" Disabled="true">Disabled</Button>
        </DocsContent>
        <MarkdownSegment Text="@Markdown_Outlined" />
    </Container>
    <Container>
        <Typography Typo="Typo.h4">Sizes</Typography>
        <DocsContent Outlined="true">
            <DocsContentRow>
                <Button Variant="Variant.Text" Size="Size.Small">Small</Button>
                <Button Variant="Variant.Text" Size="Size.Medium">Medium</Button>
                <Button Variant="Variant.Text" Size="Size.Large">Large</Button>
            </DocsContentRow>
            <DocsContentRow>
                <Button Variant="Variant.Outlined" Size="Size.Small" Color="Color.Secondary">Small</Button>
                <Button Variant="Variant.Outlined" Size="Size.Medium" Color="Color.Secondary">Medium</Button>
                <Button Variant="Variant.Outlined" Size="Size.Large" Color="Color.Secondary">Large</Button>
            </DocsContentRow>
            <DocsContentRow>
                <Button Variant="Variant.Contained" Size="Size.Small" Color="Color.Primary">Small</Button>
                <Button Variant="Variant.Contained" Size="Size.Medium" Color="Color.Primary">Medium</Button>
                <Button Variant="Variant.Contained" Size="Size.Large" Color="Color.Primary">Large</Button>
            </DocsContentRow>
            <DocsContentRow>
                <IconButton Icon="@Icons.Material.Delete" Size="Size.Small"></IconButton>
                <IconButton Icon="@Icons.Material.Delete" Size="Size.Medium"></IconButton>
                <IconButton Icon="@Icons.Material.Delete" Size="Size.Large"></IconButton>
            </DocsContentRow>
        </DocsContent>
        <MarkdownSegment Text="@Markdown_Sizes" />
    </Container>
    <Container>
        <Typography Typo="Typo.h4">Buttons with icons and label</Typography>
        <DocsContent Outlined="true">
            <DocsContentRow>
                <Button Variant="Variant.Contained" StartIcon="@Icons.Material.Delete" Color="Color.Secondary">Delete</Button>
                <Button Variant="Variant.Contained" EndIcon="@Icons.Material.Send" Color="Color.Primary">Send</Button>
                <Button Variant="Variant.Contained" StartIcon="@Icons.Material.CloudUpload">Upload</Button>
                <Button Variant="Variant.Contained" StartIcon="@Icons.Material.Mic" Disabled="true">Talk</Button>
                <Button Variant="Variant.Contained" StartIcon="@Icons.Material.Save" Color="Color.Primary" Size="Size.Small">Save</Button>
                <Button Variant="Variant.Contained" StartIcon="@Icons.Material.Save" Color="Color.Primary" Size="Size.Large">Save</Button>
            </DocsContentRow>
        </DocsContent>
        @*<MarkdownSegment Text="@Markdown_ButtonsWithIcons" />*@
    </Container>
</DocsPage>


