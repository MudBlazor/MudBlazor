@namespace MudBlazor.Docs.Examples

<MudDropContainer T="DropItem" Items="_items" ItemsSelector="@((item,dropzone) => item.Place == dropzone)" ItemDropped="ItemUpdated" Class="d-flex flex-wrap flex-grow-1">
    <ChildContent>
        <MudDropZone T="DropItem" Identifier="Compost" CanDrop="@((item) => item.Type == ItemType.Compost)" Class="border-2 border-solid rounded-lg mud-border-lines-default pa-6 ma-8 flex-grow-1">
            <MudText Typo="Typo.button" Class="mb-4">Compost</MudText>
         </MudDropZone>
        <MudDropZone T="DropItem" Identifier="Recycle" CanDrop="@((item) => item.Type == ItemType.Recycle)" Class="border-2 border-solid rounded-lg mud-border-lines-default pa-6 ma-8 flex-grow-1">
            <MudText Typo="Typo.button" Class="mb-4">Recycle</MudText>
        </MudDropZone>
        <MudDropZone T="DropItem" Identifier="Trash" CanDrop="@((item) => item.Type == ItemType.Trash)" Class="border-2 border-solid rounded-lg mud-border-lines-default pa-6 ma-8 flex-grow-1">
            <MudText Typo="Typo.button" Class="mb-4">Trash</MudText>
        </MudDropZone>
        <MudDropZone T="DropItem" Identifier="Street" CanDrop="@((item) => false)" Class="d-flex flex-grow-1" />
    </ChildContent>
    <ItemRenderer>
        <MudPaper Outlined="true" Class="pa-4 ma-4">@context.Name</MudPaper>
    </ItemRenderer>
</MudDropContainer>

@code {
    private void ItemUpdated(MudItemDropInfo<DropItem> dropItem)
    {
        dropItem.Item.Place = dropItem.DropzoneIdentifier;
    }
    
    private List<DropItem> _items = new()
    {
        new DropItem(){ Name = "Apple Core", Type = ItemType.Compost, Place = "Street" },
        new DropItem(){ Name = "Banana Peel", Type = ItemType.Compost, Place = "Street" },
        new DropItem(){ Name = "Old Battery", Type = ItemType.Trash, Place = "Street" },
        new DropItem(){ Name = "Pizza Box", Type = ItemType.Recycle, Place = "Street" },
        new DropItem(){ Name = "Moldy Bread", Type = ItemType.Compost, Place = "Street" },
        new DropItem(){ Name = "Paper Bag", Type = ItemType.Recycle, Place = "Street" },
        new DropItem(){ Name = "Uranium-235", Type = ItemType.Trash, Place = "Street" },
    };
    
    public class DropItem
    {
        public string Name { get; set; }
        public ItemType Type { get; set; }
        public string Place { get; set; }
    }

    public enum ItemType
    {
        Compost,
        Recycle,
        Trash
    }
}
