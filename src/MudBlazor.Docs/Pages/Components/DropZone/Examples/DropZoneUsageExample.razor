@namespace MudBlazor.Docs.Examples

<MudDropContainer T="string" Class="mud-width-full">
    <MudGrid Spacing="10">
        <MudItem xs="6">
            <MudText Typo="Typo.h6">To do</MudText>
            <MudDropZone T="string" ItemDropped="AddToToDo">
                @foreach (var item in _todo)
                {
                    <MudDropItem Item="item">
                        <MudPaper Elevation="25" Class="pa-4 my-1">
                            <MudText>@item</MudText>
                        </MudPaper>
                    </MudDropItem>
                }
            </MudDropZone>
        </MudItem>
        <MudItem xs="6">
           <MudText Typo="Typo.h6">Done</MudText>
           <MudDropZone T="string" ItemDropped="AddToDone">
               @foreach (var item in _done)
               {
                   <MudDropItem Item="item">
                       <MudPaper Elevation="25" Class="pa-4 my-1">
                           <MudText>@item</MudText>
                       </MudPaper>
                   </MudDropItem>
               }
           </MudDropZone>     
        </MudItem>
    </MudGrid>
</MudDropContainer>

@code {
    private List<string> _done = new();
    private List<string> _todo = new()
    {
        "Fix Bugs", "Read GitHub notifications", "Finish roadmap"
    };

    private void RemoveFromDone(string item)
    {
        _done.Remove(item);
    }
    
    private void RemoveFromToDo(string item)
    {
        _todo.Remove(item);
    }
    
    private void AddToDone(string item)
    {
        _done.Add(item);
    }

    private void AddToToDo(string item)
    {
        _todo.Add(item);
    }
}