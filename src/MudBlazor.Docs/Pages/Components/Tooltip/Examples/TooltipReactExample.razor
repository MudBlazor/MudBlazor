@namespace MudBlazor.Docs.Examples

<MudGrid>
    <MudItem xs="12" sm="6" md="9" Class="d-flex flex-column align-center justify-center">
        <MudButton Class="mb-4" tabindex="-1" Variant="Variant.Outlined" OnClick="@(async() => await _iconButton1.FocusAsync())">Focus The Element</MudButton>
        <MudTooltip ToggleOnClick="_toggleOnClick" ShowOnFocus="_showOnFocus" ShowOnHover="_showOnHover" Text="Im Mud Tooltip">
            <MudIconButton @ref="_iconButton1" Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Primary" Size="Size.Large" />
        </MudTooltip>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCheckBox @bind-Checked="_showOnFocus" Label="Show On Focus" Color="Color.Primary" />
        <MudCheckBox @bind-Checked="_showOnHover" Label="Show On Hover" Color="Color.Primary" />
        <MudCheckBox @bind-Checked="_toggleOnClick" Label="Click" Color="Color.Primary" />
    </MudItem>
</MudGrid>


@code {

    bool _toggleOnClick = false;
    bool _showOnHover = true;
    bool _showOnFocus = true;

    MudIconButton _iconButton1;
}