@namespace MudBlazor.Docs.Examples

@inject ISnackbar Snackbar


<MudButton Color="Color.Dark" @onclick="@(() => Snackbar.Add((MarkupString)"The reactor type is RBMK-1000", Severity.Normal))">Normal Snackbar</MudButton>
<MudButton Color="Color.Info" @onclick="@(() => Snackbar.Add((MarkupString)"The reactor was fired up successfully", Severity.Info))">Info Snackbar</MudButton>
<MudButton Color="Color.Success" @onclick="@(() => Snackbar.Add((MarkupString)"The reactor is running at optimum temperature", Severity.Success))">Success Snackbar</MudButton>
<MudButton Color="Color.Warning" @onclick="@(() => Snackbar.Add((MarkupString)"The reactor temperature exceeds the optimal range", Severity.Warning))">Warning Snackbar</MudButton>
<MudButton Color="Color.Error" @onclick="@(() => Snackbar.Add((MarkupString)"Reactor meltdown is imminent", Severity.Error))">Error Snackbar</MudButton>