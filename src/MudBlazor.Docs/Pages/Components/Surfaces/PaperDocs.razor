@page "/components/surfaces/paper"

<DocsPage>
    <Container>
        <Typography Typo="Typo.h3">Paper</Typography>
        <Typography Typo="Typo.h4">Component</Typography>
        <DocsContent DarkenBackground="true" Class="paper-filler">
            <Paper Elevation="0"></Paper>
            <Paper></Paper>
            <Paper Elevation="3"></Paper>
        </DocsContent>
        <MarkdownSegment Text="@Markdown_Component" />
        <Typography Typo="Typo.h4">Variants</Typography>
        <Typography Typo="Typo.subtitle1">If you need an outlined surface or a square, use the variant property.</Typography>
        <DocsContent DarkenBackground="true" Class="paper-filler">
            <Paper Outlined="true"></Paper>
            <Paper Outlined="true" Square="true"></Paper>
            <Paper Square="true"></Paper>
        </DocsContent>
        <MarkdownSegment Text="@Markdown_Variants" />
    </Container>
</DocsPage>

@code {
string Markdown_Component = @"```html
<Paper Elevation=""0""></Paper>
<Paper></Paper>
<Paper Elevation=""3""></Paper>
```";
string Markdown_Variants = @"```html
<Paper Outlined=""true""></Paper>
<Paper Outlined=""true"" Square=""true""></Paper>
<Paper Square=""true""></Paper>
```";
}
