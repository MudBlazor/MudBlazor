@namespace MudBlazor.Docs.Examples

<MudTreeView Style="width: 500px;" CanSelect="true" @bind-SelectedItems="SelectedItems">
    <MudTreeViewItem Text="Applications">
        <MudTreeViewItem Text="Calendar" />
        <MudTreeViewItem Text="Chrome" />
        <MudTreeViewItem Text="Webstorm" />
    </MudTreeViewItem>
    <MudTreeViewItem Text="Documents">
        <MudTreeViewItem Text="OSS" />
        <MudTreeViewItem Text="Material-UI">
            <MudTreeViewItem Text="src">
                <MudTreeViewItem Text="index.js" />
                <MudTreeViewItem Text="tree-view.js" />
            </MudTreeViewItem>
        </MudTreeViewItem>
    </MudTreeViewItem>
