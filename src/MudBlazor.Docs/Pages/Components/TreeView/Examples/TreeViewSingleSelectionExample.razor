@namespace MudBlazor.Docs.Examples

<MudPaper Width="300px" Elevation="0">
    <MudTreeView @bind-SelectedValue="_selectedValue" @bind-SelectionMode="_selectionMode" Hover="true">
        <MudTreeViewItem @bind-Expanded="@_folderOneExpanded" Value="@(".vscode")" Icon="@(_folderOneExpanded ? Icons.Custom.Uncategorized.FolderOpen : Icons.Custom.Uncategorized.Folder)">
            <MudTreeViewItem Value="@("launch.json")" Icon="@Icons.Custom.FileFormats.FileCode" />
            <MudTreeViewItem Value="@("tasks.json")" Icon="@Icons.Custom.FileFormats.FileCode" />
        </MudTreeViewItem>
        <MudTreeViewItem @bind-Expanded="@_folderTwoExpanded" Value="@("content")" Icon="@(_folderTwoExpanded ? Icons.Custom.Uncategorized.FolderOpen : Icons.Custom.Uncategorized.Folder)">
            <MudTreeViewItem Value="@("logo.png")" Icon="@Icons.Custom.FileFormats.FileImage" />
        </MudTreeViewItem>
    </MudTreeView>
</MudPaper>

<MudPaper Width="300px" Elevation="0">
    <MudTreeView @bind-SelectedValue="_selectedValue" @bind-SelectionMode="_selectionMode" Hover="true">
        <MudTreeViewItem @bind-Expanded="@_folderOneExpanded" Value="@(".vscode")" Icon="@(_folderOneExpanded ? Icons.Custom.Uncategorized.FolderOpen : Icons.Custom.Uncategorized.Folder)">
            <MudTreeViewItem Value="@("launch.json")" Icon="@Icons.Custom.FileFormats.FileCode" />
            <MudTreeViewItem Value="@("tasks.json")" Icon="@Icons.Custom.FileFormats.FileCode" />
        </MudTreeViewItem>
        <MudTreeViewItem @bind-Expanded="@_folderTwoExpanded" Value="@("content")" Icon="@(_folderTwoExpanded ? Icons.Custom.Uncategorized.FolderOpen : Icons.Custom.Uncategorized.Folder)">
            <MudTreeViewItem Value="@("logo.png")" Icon="@Icons.Custom.FileFormats.FileImage" />
        </MudTreeViewItem>
    </MudTreeView>
</MudPaper>

<MudStack Row style="width:100%; justify-content: center">
    <div style="max-width: 300px">
        <MudSelect @bind-Value="_selectionMode">
            <MudSelectItem Value="SelectionMode.SingleSelection"></MudSelectItem>
            <MudSelectItem Value="SelectionMode.ToggleSelection"></MudSelectItem>
            <MudSelectItem Value="SelectionMode.MultiSelection"></MudSelectItem>
        </MudSelect>
    </div>
    <MudText Typo="@Typo.subtitle1">Selected item: @_selectedValue</MudText>
</MudStack>

@code {
    private string _selectedValue = "tasks.json";
    private bool _folderOneExpanded = true;
    private bool _folderTwoExpanded;
    private SelectionMode _selectionMode = SelectionMode.SingleSelection;
}