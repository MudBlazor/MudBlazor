@namespace MudBlazor.Docs.Examples

<MudStack>
    <MudPaper Width="300px" Elevation="0">
        <MudTreeView T="string" Hover="_hover" Dense="_dense" Disabled="_disabled">
            <MudTreeViewItem Value="@("content")">
                <MudTreeViewItem Value="@("logo.png")" />
            </MudTreeViewItem>
            <MudTreeViewItem Value="@("src")">
                <MudTreeViewItem Value="@("mudblazor.docs")" />
                <MudTreeViewItem Value="@("mudblazor.docs.server")" />
            </MudTreeViewItem>
        </MudTreeView>
    </MudPaper>

    <MudStack Row Class="flex-wrap">
        <MudCheckBox @bind-Value="_hover" Label="Hover" />
        <MudCheckBox @bind-Value="_dense" Label="Dense" />
        <MudCheckBox @bind-Value="_disabled" Label="Disabled" />
    </MudStack>
</MudStack>

@code {
    bool _hover = true;
    bool _dense = true;
    bool _disabled = false;
}