<MudDialog ClassContent="demo-dialog-form">
    <DialogContent>
            <MudTextField Label="Email" InputType="InputType.Email" FullWidth="true"></MudTextField>
            <MudTextField Label="Password" InputType="InputType.Password"FullWidth="true"></MudTextField>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" @onclick="Close">Log in</MudButton>
    </DialogContent>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Close() => MudDialog.Close(DialogResult.Ok(true));

}
