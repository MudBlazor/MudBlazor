@namespace MudBlazor.Docs.Examples

<MudTextField @bind-Value="Amount" Label="Amount" Variant="Variant.Outlined" AdornmentStartIcon="@Icons.Material.Filled.AttachMoney" AdornmentStartColor="Color.Warning" />
<MudTextField @bind-Value="Weight" Label="Weight" Variant="Variant.Outlined" AdornmentEndText="Kg" AdornmentEndColor="Color.Info" />
<MudTextField  @bind-Value="Search" Label="Search" Variant="Variant.Outlined" AdornmentEndIcon="@Icons.Material.Filled.Search" AdornmentEndColor="Color.Secondary" />

@code {
    public double? Amount { get; set; }
    public int? Weight { get; set; }
    public string Search { get; set;}
}