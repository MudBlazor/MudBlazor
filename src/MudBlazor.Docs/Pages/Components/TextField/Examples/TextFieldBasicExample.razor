@namespace MudBlazor.Docs.Examples


<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudMaskField OnKeyDown="KeyDownn" @bind-Value="TextValue" Mask="nnn111-nn-nn" Label="Mask" Variant="Variant.Text"></MudMaskField>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudText>Pressed Key: @pressedKey @DateTime.Now.ToLongTimeString()</MudText>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudText>Value: @TextValue @DateTime.Now.ToLongTimeString()</MudText>
    </MudItem>
</MudGrid>

@code {
	public string TextValue { get; set; }
	private string pressedKey = "";

	private void KeyDownn(KeyboardEventArgs e)
	{
		pressedKey = e.Key.ToString();
	}
}