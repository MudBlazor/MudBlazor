        <MudTextField @bind-Value="@RawValue" Label="Raw Value"></MudTextField>
    </MudItem>
	<MudItem xs="12" sm="6" md="4">
        <MudButton Variant="Variant.Filled" OnClick="ChangeRaw">Change Raw Value</MudButton>
    </MudItem>
</MudGrid>

@code {
