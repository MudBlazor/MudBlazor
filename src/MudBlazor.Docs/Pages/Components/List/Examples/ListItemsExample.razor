@namespace MudBlazor.Docs.Examples
@using System.ComponentModel

<MudGrid>
    <MudItem xs="12" sm="8" Class="d-flex align-start justify-space-around">
        <MudPaper Width="300px">
            <MudText Class="ma-4">Array List</MudText>
            <MudList Items="states" Clickable="true" MaxItems="_maxItems" />
        </MudPaper>

        <MudPaper Width="300px">
            <MudText Class="ma-4">Enum List</MudText>
            @*(ICollection<string>Enum.GetNames(typeof(Continent)) can also be used*@
            <MudList Items="Enum.GetNames(typeof(Continent)).ToList()" Clickable="true" MaxItems="_maxItems" />
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="4">
        <MudNumericField @bind-Value="_maxItems" Label="Max Items" Min="0" Max="16" HelperText="Between 0 - 16" HelperTextOnFocus="true" />
    </MudItem>
</MudGrid>

