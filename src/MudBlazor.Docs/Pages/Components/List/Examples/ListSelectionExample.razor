@namespace MudBlazor.Docs.Examples

<MudStack Row="true">
    <MudPaper Width="300px">
        <MudList T="string" @bind-SelectedValue="_selectedValue" Color="@_selectedColor">
            <MudListSubheader>
                Your drink:
                <MudChip T="string" Color="@_selectedColor">
                    @(_selectedValue ?? "You are dry")
                </MudChip>
            </MudListSubheader>
            <MudListItem Text="Milk" />
            <MudListItem Text="Sparkling Water" Value="@("Carbonated H²O")" />
            <MudListItem Text="Teas">
                <NestedList>
                    <MudListItem Text="English Tee" Value="@("Earl Grey")" />
                    <MudListItem Text="Japanese Tee" Value="@("Matcha")" />
                    <MudListItem Text="Chinese Tee" Value="@("Wu Long Cha")" />
                </NestedList>
            </MudListItem>
            <MudListItem Text="Coffees">
                <NestedList>
                    <MudListItem Text="Irish Coffee" />
                    <MudListItem Text="Double Espresso" />
                    <MudListItem Text="Cafe Latte" />
                </NestedList>
            </MudListItem>
        </MudList>
    </MudPaper>

    <MudPaper Width="300px" Height="300px" Style="overflow-y: scroll">
        <MudList T="Color" @bind-SelectedValue="_selectedColor">
            <MudListSubheader>
                Select a color:
            </MudListSubheader>
            @foreach (var color in _colors) {
            <MudListItem T="Color" Value="@color" IconColor="@color" Icon="@Icons.Material.Filled.FormatColorFill">@color</MudListItem>
            }
        </MudList>
    </MudPaper>
</MudStack>



@code
{
    string _selectedValue = "Milk";
    Color _selectedColor = Color.Primary;
    Color[] _colors = { Color.Primary, Color.Secondary, Color.Tertiary, Color.Info, Color.Success, Color.Error, Color.Warning, Color.Dark };
}
