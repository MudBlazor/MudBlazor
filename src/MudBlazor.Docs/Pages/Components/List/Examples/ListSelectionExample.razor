@namespace MudBlazor.Docs.Examples

@inject ISnackbar Snackbar

<MudGrid>
    <MudItem xs="12" sm="8" Class="d-flex align-center justify-center">
        <MudPaper Width="300px">
            <MudList @ref="_list" T="int" Clickable="true" @bind-SelectedItem="selectedItem" @bind-SelectedValue="selectedValue">
                <MudListSubheader T="string">
                    Your drink:
                    <MudChip Color="Color.Secondary">
                        @(selectedItem?.Text ?? "You are dry") (@(selectedValue.ToString()))
                    </MudChip>
                </MudListSubheader>
                <MudListItem T="int" Text="Sparkling Water" Value="1" />
                <MudListItem T="int" Text="Still Water" Value="2" />
                <MudListItem T="int" Text="Teas">
                    <NestedList>
                        <MudListItem Text="Earl Grey" Value="3" />
                        <MudListItem Text="Matcha" Value="4" />
                        <MudListItem Text="Pu'er" Value="5" />
                    </NestedList>
                </MudListItem>
                <MudListItem T="int" Text="Coffees">
                    <NestedList>
                        <MudListItem Text="Irish Coffee" Value="6" />
                        <MudListItem Text="Double Espresso" Value="7" />
                        <MudListItem Text="Cafe Latte" Value="8" />
                    </NestedList>
                </MudListItem>
            </MudList>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="4">
        <MudButton OnClick="GetHilight">Get Hilight</MudButton>
        <MudButton OnClick="HilightFirst">Hilight First</MudButton>
        <MudButton OnClick="HilightNext">Hilight Next</MudButton>
        <MudButton OnClick="HilightPrevious">Hilight Previous</MudButton>
        <MudButton OnClick="HilightLast">Hilight Last</MudButton>
    </MudItem>
</MudGrid>



The selected value is : @selectedValue

@code
{
    MudList<int> _list;
    MudListItem<int> selectedItem = new();
    int selectedValue = 1;

    private void GetHilight()
    {
        Snackbar.Add(_list.GetActiveItemIndex().ToString());
    }

    private async void HilightFirst()
    {
        await _list.ActiveFirstItem();
    }

    private async void HilightNext()
    {
        await _list.ActiveAdjacentItem(1);
    }

    private async void HilightPrevious()
    {
        await _list.ActiveAdjacentItem(-1);
    }

    private async void HilightLast()
    {
        await _list.ActiveLastItem();
    }
}
