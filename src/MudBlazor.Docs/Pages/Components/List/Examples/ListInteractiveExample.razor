@namespace MudBlazor.Docs.Examples

<MudGrid>
    <MudItem xs="12" md="12">
        <MudCheckBox @bind-Checked="@Dense" Label="Dense" Color="Color.Default" />
        <MudCheckBox @bind-Checked="@Clickable" Label="Clickable" Color="Color.Primary" />
        <MudCheckBox @bind-Checked="@Gutters" Label="Disable Gutters" Color="Color.Secondary" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudText Typo="Typo.h6" GutterBottom="true">Text only</MudText>
        <MudPaper Width="100%">
            <MudList T="string" Clickable="@Clickable" @bind-SelectedItem="selectedItem" Dense="@Dense" DisableGutters="@Gutters">
                <MudListItem T="string" Text="Single List Item" />
                <MudListItem T="string" Text="Single List Item" />
                <MudListItem T="string" Text="Single List Item" />
            </MudList>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudText Typo="Typo.h6" GutterBottom="true">Icons with text</MudText>
        <MudPaper Width="100%">
            <MudList T="string" Clickable="@Clickable" @bind-SelectedItem="selectedItem" Dense="@Dense" DisableGutters="@Gutters">
                <MudListItem T="string" Text="Single List Item" Icon="@Icons.Filled.Bookmark" />
                <MudListItem T="string" Text="Single List Item" Icon="@Icons.Filled.Bookmark" IconColor="Color.Primary" />
                <MudListItem T="string" Text="Single List Item" Icon="@Icons.Filled.Bookmark" IconColor="Color.Secondary" />
            </MudList>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudText Typo="Typo.h6" GutterBottom="true">Avatar with text</MudText>
        <MudPaper Width="100%">
            <MudList T="string" Clickable="@Clickable" Dense="@Dense" @bind-SelectedItem="selectedItem" DisableGutters="@Gutters">
                <MudListItem T="string" Text="Single List Item" Avatar="@Icons.Filled.Image" />
                <MudListItem T="string" Text="Single List Item" Avatar="@Icons.Filled.Image" IconColor="Color.Dark" />
                <MudListItem T="string" Text="Single List Item" Avatar="@Icons.Filled.Image" IconColor="Color.Error" />
            </MudList>
        </MudPaper>
    </MudItem>
</MudGrid>



@code {
    public bool Dense { get; set; }
    public bool Clickable { get; set; }
    public bool Gutters { get; set; }

    MudListItem<string> selectedItem = new();
}