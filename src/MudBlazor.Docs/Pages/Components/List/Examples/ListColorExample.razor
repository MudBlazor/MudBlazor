@namespace MudBlazor.Docs.Examples

<MudStack Row="true">
    <MudPaper Width="300px">
        <MudList T="int" Clickable="true" @bind-SelectedValue="selectedValue" Color="_color">
            <MudListSubheader>
                Select Your Character:
            </MudListSubheader>
            <MudListItem T="int" Text="Neutral" Value="1" />
            <MudListItem T="int" Text="Good">
                <NestedList>
                    <MudListItem T="int" Text="Frodo" Value="2" />
                    <MudListItem T="int" Text="Sam" Value="3" />
                    <MudListItem T="int" Text="Gandalf" Value="4" />
                </NestedList>
            </MudListItem>
            <MudListItem T="int" Text="Evil">
                <NestedList>
                    <MudListItem T="int" Text="Sauron" Value="5" />
                    <MudListItem T="int" Text="Boromir" Value="6" />
                    <MudListItem T="int" Text="Gollum" Value="7" />
                </NestedList>
            </MudListItem>
            <MudListItem Disabled="true" Text="Harry Potter" Value="7" />
        </MudList>
    </MudPaper>
    <MudPaper Class="pe-4">
        <MudRadioGroup T="Color" @bind-SelectedValue="_color" Class="d-flex flex-column">
            <MudRadio Value="Color.Primary" Color="Color.Primary">Primary</MudRadio>
            <MudRadio Value="Color.Secondary" Color="Color.Secondary">Secondary</MudRadio>
            <MudRadio Value="Color.Tertiary" Color="Color.Tertiary">Tertiary</MudRadio>
            <MudRadio Value="Color.Info" Color="Color.Info">Info</MudRadio>
            <MudRadio Value="Color.Error" Color="Color.Error">Error</MudRadio>
            <MudRadio Value="Color.Warning" Color="Color.Warning">Warning</MudRadio>
            <MudRadio Value="Color.Dark" Color="Color.Dark">Dark</MudRadio>
        </MudRadioGroup>
    </MudPaper>
</MudStack>

@code{
    int selectedValue = 1;
    Color _color = Color.Primary;
}