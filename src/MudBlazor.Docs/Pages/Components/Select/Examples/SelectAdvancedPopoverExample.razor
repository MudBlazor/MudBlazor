@namespace MudBlazor.Docs.Examples

<MudSelect T="string" Label="Default" Variant="Variant.Outlined">
    <MudSelectItem Value="@("Foo")">Foo</MudSelectItem>
    <MudSelectItem Value="@("Bar")">Bar</MudSelectItem>
</MudSelect>

<MudSelect T="string" Label="Next To Y Axis" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Outlined">
    <MudSelectItem Value="@("Foo")">Foo</MudSelectItem>
    <MudSelectItem Value="@("Bar")">Bar</MudSelectItem>
</MudSelect>

<MudSelect T="string" Label="Next To X Axis" AnchorOrigin="Origin.CenterLeft" TransformOrigin="Origin.CenterRight" Variant="Variant.Outlined">
    <MudSelectItem Value="@("Foo")">Foo</MudSelectItem>
    <MudSelectItem Value="@("Bar")">Bar</MudSelectItem>
</MudSelect>

<MudSelect T="string" Label="Centered" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter" Variant="Variant.Outlined">
    <MudSelectItem Value="@("Foo")">Foo</MudSelectItem>
    <MudSelectItem Value="@("Bar")">Bar</MudSelectItem>
    <MudSelectItem Value="@("Fizz")" Text="Fizz"></MudSelectItem>
</MudSelect>