@namespace MudBlazor.Docs.Examples

    <MudGrid>
        <MudItem xs="12" Class="d-flex justify-center">
            <MudSwitch @bind-Checked="@Label_Switch1" ThumbIcon="@(_showIcon==true?_iconString:null)" ThumbIconOff="@(_showOffIcon==true?_iconOffString:null)" ThumbIconColor="Color.Primary" />
        </MudItem>
        <MudItem xs="12" Class="d-flex">
            <MudCheckBox @bind-Checked="_showIcon" Color="Color.Primary" Label="Show Icon"></MudCheckBox>
        </MudItem>
        <MudItem xs="12">
            <MudCheckBox @bind-Checked="_showOffIcon" Color="Color.Primary" Label="Show Off Icon"></MudCheckBox>
        </MudItem>
    </MudGrid>


@code{
    bool Label_Switch1 = false;
    bool _showIcon = true;
    bool _showOffIcon = false;
    string _iconString = Icons.Material.Filled.Done;
    string _iconOffString = Icons.Material.Filled.Close;
}
