@namespace MudBlazor.Docs.Examples

<MudStack>
    <MudColorPicker DebounceInterval="Interval" DisableDragEffect="!Draggable" PickerVariant="PickerVariant.Static" />

    <MudNumericField T="int" @bind-Value="Interval" Label="Debounce interval" />

    <MudCheckBox T="bool" @bind-Value="Draggable" Label="Allow dragging the pointer" />
</MudStack>

@code {
    public int Interval { get; set; } = 100;
    public bool Draggable { get; set; } = true;
}