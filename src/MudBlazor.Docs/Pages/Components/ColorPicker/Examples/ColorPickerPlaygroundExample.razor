@namespace MudBlazor.Docs.Examples



<MudGrid>
    <MudItem md="8" Class="d-flex justify-center">
        <MudColorPicker ShowToolbar="ShowToolbar" Alpha="Alpha" ColorField="ColorField" Preview="Preview" ShowSliders="ShowSliders" ShowInputs="ShowInputs" ModeSwitch="ModeSwitch" ColorPickerMode="ColorPickerMode" PickerVariant="PickerVariant.Static" />
    </MudItem>
    <MudItem md="4">
        <MudPaper Height="400px" Class="px-4 pt-2 pb-4">
            <MudText Typo="Typo.h6">Options</MudText>
            <MudCheckBox @bind-Value="ShowToolbar" Label="Disable Toolbar" Color="Color.Primary" Dense="true" />
            <MudCheckBox @bind-Value="Alpha" Label="Disable Alpha" Color="Color.Primary" Dense="true" />
            <MudCheckBox @bind-Value="ColorField" Label="Disable Color Field" Color="Color.Primary" Dense="true" />
            <MudCheckBox @bind-Value="Preview" Label="Disable Preview" Color="Color.Primary" Dense="true" />
            <MudCheckBox @bind-Value="ShowSliders" Label="Disable Sliders" Color="Color.Primary" Dense="true" />
            <MudCheckBox @bind-Value="ShowInputs" Label="Disable Inputs" Color="Color.Primary" Dense="true" />
            <MudCheckBox @bind-Value="ModeSwitch" Label="Disable Mode Switch" Color="Color.Primary" Dense="true" />
            <MudSelect Label="Color Picker Mode" Variant="Variant.Outlined" Dense="true" Margin="Margin.Dense" @bind-Value="ColorPickerMode" Class="mt-4">
                <MudSelectItem T="ColorPickerMode" Value="ColorPickerMode.RGB">RGB</MudSelectItem>
                <MudSelectItem T="ColorPickerMode" Value="ColorPickerMode.HSL">HSL</MudSelectItem>
                <MudSelectItem T="ColorPickerMode" Value="ColorPickerMode.HEX">HEX</MudSelectItem>
            </MudSelect>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    public bool ShowToolbar { get; set; } = true;
    public bool Alpha { get; set; } = true;
    public bool ColorField { get; set; } = true;
    public bool Preview { get; set; } = true;
    public bool ShowSliders { get; set; } = true;
    public bool ShowInputs { get; set; } = true;
    public bool ModeSwitch { get; set; } = true;

    public ColorPickerMode ColorPickerMode { get; set; }
}