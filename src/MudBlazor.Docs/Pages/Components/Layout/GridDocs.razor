                        <Paper>3</Paper>
                    </Item>
                    <Item GridSize="GridSize.Three">
                        <Paper>3</Paper>
                    </Item>
                    <Item GridSize="GridSize.Three">
                        <Paper>3</Paper>
                    </Item>
                </Grid>
            </SectionContent>
            <SectionSource Code="@Markdown_BasicGrid"></SectionSource>
        </DocsPageSection>
    </DocsPageContent>
</DocsPage>

@code {

    public int spacing {get; set;} = 2;
    void AddSpacing()
    {
        if (spacing >= 10)
        {
            spacing = 0;
        }
        else
        {
            spacing += 1;
        }
        StateHasChanged();
    }

