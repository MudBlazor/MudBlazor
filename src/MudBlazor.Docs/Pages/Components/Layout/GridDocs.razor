        <DocsPageSection>
            <SectionHeader>
                <Title>Spacing</Title>
                <Description></Description>
            </SectionHeader>
            <SectionContent DarkenBackground="true" FullWidth="true" Class="demo-grid-spacing">
                <Grid>
                    <Item GridSize="GridSize.Twelve">
                        <Grid Spacing="@spacing" Justify="Justify.Center">
