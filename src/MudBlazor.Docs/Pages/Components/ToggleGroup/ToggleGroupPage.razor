@page "/components/togglegroup"

<DocsPage>
    <DocsPageHeader Title="ToggleGroup" SubTitle="A general usage for toggle items.">
        <Description>
            <MudText>For a basic button group that doesn't need to be selected, see <MudLink Href="/components/buttongroup">ButtonGroup</MudLink></MudText>
        </Description>
    </DocsPageHeader>
    
    
    <DocsPageContent>
        <DocsPageSection>
            <SectionHeader Title="Usage">
                <Description>
                    MudToggleGroup provides an infrastructure where items can be marked horizontally or vertically. Supports icons and texts.
                </Description>
            </SectionHeader>
            <SectionContent Code="ToggleBasicsExample" ShowCode="false">
                <ToggleBasicsExample />
            </SectionContent>
        </DocsPageSection>

        <DocsPageSection>
            <SectionHeader Title="Selection Mode">
                <Description>
                    ToggleGroup has 3 selection mode: Single selection, multi selection and toggle selection.
                </Description>
            </SectionHeader>
            <SectionContent Code="ToggleSelectionsExample" ShowCode="false">
                <ToggleSelectionsExample />
            </SectionContent>
        </DocsPageSection>

        <DocsPageSection>
            <SectionHeader Title="Color">
                <Description>
                    ToggleGroup supports mud colors.
                </Description>
            </SectionHeader>
            <SectionContent Code="ToggleColorExample" ShowCode="false">
                <ToggleColorExample />
            </SectionContent>
        </DocsPageSection>

        <DocsPageSection>
            <SectionHeader Title="Custom Selection Style">
                <Description>
                    You can customize <CodeInline>SelectedClass</CodeInline>.
                </Description>
            </SectionHeader>
            <SectionContent Code="ToggleCustomSelectionStyleExample" ShowCode="false">
                <ToggleCustomSelectionStyleExample />
            </SectionContent>
        </DocsPageSection>

        <DocsPageSection>
            <SectionHeader Title="Custom Content">
                <Description>
                    MudToggleItem supports renderfragment to customize it's content.
                </Description>
            </SectionHeader>
            <SectionContent Code="ToggleCustomContentExample" ShowCode="false">
                <ToggleCustomContentExample />
            </SectionContent>
        </DocsPageSection>

    </DocsPageContent>
</DocsPage>
