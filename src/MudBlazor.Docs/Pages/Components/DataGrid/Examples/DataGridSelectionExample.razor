@using System.Net.Http.Json
@using MudBlazor.Examples.Data.Models
@namespace MudBlazor.Docs.Examples
@inject HttpClient httpClient

<MudDataGrid Items="@Elements.Take(4)">
    <Columns>
        <Column T="Element" Field="Number" FieldType="typeof(int)" Title="Nr" />
        <Column T="Element" Field="Sign" FieldType="typeof(string)" />
        <Column T="Element" Field="Name" FieldType="typeof(string)" />
        <Column T="Element" Field="Position" FieldType="typeof(int)"/>
        <Column T="Element" Field="Molar" FieldType="typeof(double)" Title="Molar mass" />
    </Columns>
</MudDataGrid>

@code { 
    private IEnumerable<Element> Elements = new List<Element>();

    protected override async Task OnInitializedAsync()
    {
        Elements = await httpClient.GetFromJsonAsync<List<Element>>("webapi/periodictable");
    }
}
