@namespace MudBlazor.Docs.Examples



<MudTimeline>
    <MudTimelineItem>
        <MudText>Item A</MudText>
    </MudTimelineItem>
    <MudTimelineItem HideDot="true">
        <MudText Align="Align.End">Hidden Dot</MudText>
    </MudTimelineItem>
    <MudTimelineItem>
        <MudText>Item C</MudText>
    </MudTimelineItem>
</MudTimeline>

<MudDivider />

<MudTimeline TimelineMode="TimelineMode.Left">
    <MudTimelineItem>
        <MudText>Item A</MudText>
    </MudTimelineItem>
    <MudTimelineItem>
        <TimelineItemContent>
            <MudText>Item B</MudText>
        </TimelineItemContent>
        <TimelineOppositeContent>
            <MudText>Opposite B</MudText>
        </TimelineOppositeContent>
    </MudTimelineItem>
    <MudTimelineItem>
        <MudText>Item C</MudText>
    </MudTimelineItem>
</MudTimeline>

<MudTimeline TimelineMode="TimelineMode.Right">
    <MudTimelineItem>
        <MudText Align="Align.End">Item A</MudText>
    </MudTimelineItem>
    <MudTimelineItem>
        <TimelineItemContent>
            <MudText Align="Align.End">Item B</MudText>
        </TimelineItemContent>
        <TimelineOppositeContent>
            <MudText>Opposite B</MudText>
        </TimelineOppositeContent>
    </MudTimelineItem>
    <MudTimelineItem>
        <MudText Align="Align.End">Item C</MudText>
    </MudTimelineItem>
</MudTimeline>

<MudDivider />

<MudTimeline @bind-SelectedIndex="_selectedIndex">
    <MudTimelineItem Color="Color.Primary">
        <MudCard>
            <MudCardHeader Class="mud-theme-primary">
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">The Story Book</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This day everything happend.</MudText>
                <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
            </MudCardActions>
        </MudCard>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Secondary">
        <MudCard>
            <MudCardHeader Class="mud-theme-secondary">
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">The Story Book</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This day everything happend.</MudText>
                <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Secondary">Read More</MudButton>
            </MudCardActions>
        </MudCard>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Tertiary">
        <MudCard>
            <MudCardHeader Class="mud-theme-tertiary">
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">The Story Book</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>This day everything happend.</MudText>
                <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Tertiary">Read More</MudButton>
            </MudCardActions>
        </MudCard>
    </MudTimelineItem>
</MudTimeline>
<MudText>@($"Selected Index: {_selectedIndex}")</MudText>

<MudDivider />

<MudTimeline>
    <MudTimelineItem Color="Color.Info" Size="Size.Small">
        <TimelineOppositeContent>
            <MudText Color="Color.Info" Typo="Typo.h5">1970</MudText>
        </TimelineOppositeContent>
        <TimelineItemContent>
            <MudText Color="Color.Info" Typo="Typo.h6" GutterBottom="true">Atom Towns</MudText>
            <MudText>Construction of the town of Pripyat, one of 9 “atom towns” begins, to be inhabited by future employees of the nuclear power plants.</MudText>
        </TimelineItemContent>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Success" Size="Size.Small">
        <TimelineOppositeContent>
            <MudText Color="Color.Success" Typo="Typo.h5">1977</MudText>
        </TimelineOppositeContent>
        <TimelineItemContent>
            <MudText Color="Color.Success" Typo="Typo.h6" GutterBottom="true">Operational</MudText>
            <MudText>The first of the Chernobyl Nuclear Power Plants four reactors is ready to operate followed by number 2 in 1978.</MudText>
        </TimelineItemContent>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Error" Size="Size.Small">
        <TimelineOppositeContent>
            <MudText Color="Color.Error" Typo="Typo.h5">1979</MudText>
        </TimelineOppositeContent>
        <TimelineItemContent>
            <MudText Color="Color.Error" Typo="Typo.h6" GutterBottom="true">Pripyat</MudText>
            <MudText>Pripyat officially proclaimed as a city.<br />The Chernobyl Atomic Power Station reaches its first 10 billion kilowatt-hours of electical output.</MudText>
        </TimelineItemContent>
    </MudTimelineItem>
</MudTimeline>

@code {

    private int _selectedIndex = -1;


