@namespace MudBlazor.Docs.Examples

<MudPaper Class="pa-4">
    <MudStack Spacing="2">
        <MudButton OnClick="OnExpandCollapseClick">@(_isExpanded ? "Collapse" : "Expand")</MudButton>
        <MudDivider />
        <MudCollapse IsExpanded="_isExpanded">
                This content is collapsible.
        </MudCollapse>
    </MudStack>
</MudPaper>

@code {
    bool _isExpanded = true;

    private void OnExpandCollapseClick() {
        _isExpanded = !_isExpanded;
    }
}
