@namespace MudBlazor.Docs.Examples

<MudSwipeArea @ref="_swipeArea" OnSwipe="@((d) => _swipeDirection = d)" Style="width: 100%; height: 300px" Sensivity="_sensivity" PreventDefault="@_preventDefault">
    <MudText Typo="@Typo.body1">@($"{_swipeDirection} - Swiped: {_swipeArea.LastSwipedAmount()}px")</MudText>
</MudSwipeArea>
<MudSwitch @bind-Checked="@_preventDefault" Color="Color.Primary">Prevent Default</MudSwitch>
<MudNumericField @bind-Value="_sensivity" />

@code
    {
    MudSwipeArea _swipeArea;
    SwipeDirection _swipeDirection;
    bool _preventDefault = true;
    int _sensivity = 100;
}
