@namespace MudBlazor.Docs.Examples

<MudPaper Outlined Class="border-dashed">
    <MudStack StretchChildren="@stretch" Row>
        <MudPaper Class="pa-3 mud-theme-primary">Item 1</MudPaper>
        <MudPaper Class="pa-3 mud-theme-primary">Item 2</MudPaper>
        <MudPaper Class="pa-3 mud-theme-primary">Item 3</MudPaper>
    </MudStack>
</MudPaper>

<MudChipSet T="string" Mandatory Class="mt-12" >
    <MudChip T="string" Text="Do Not Stretch" OnClick="@(() => stretch = StretchChildren.None)" SelectedColor="Color.Primary" />
    <MudChip T="string" Text="Stretch First Child" OnClick="@(() => stretch = StretchChildren.FirstChild)" SelectedColor="Color.Primary" Default="true" />
    <MudChip T="string" Text="Stretch Last Child" OnClick="@(() => stretch = StretchChildren.LastChild)" SelectedColor="Color.Primary" />
    <MudChip T="string" Text="Stretch Middle Children" OnClick="@(() => stretch = StretchChildren.MiddleChildren)" SelectedColor="Color.Primary" />
    <MudChip T="string" Text="Stretch All Children" OnClick="@(() => stretch = StretchChildren.AllChildren)" SelectedColor="Color.Primary" />
</MudChipSet>

@code {
    StretchChildren stretch = StretchChildren.FirstChild;
}