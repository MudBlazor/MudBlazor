@namespace MudBlazor.Docs.Examples


<MudGrid Class="justify-space-between">
    <MudItem xs="12" sm="6" md="4">
        <MudMaskField @ref="maskField" OnKeyDown="KeyDown" HelperText="@mask" HelperTextOnFocus="true" RawValue="@RawValue" @bind-Value="TextValue" Mask="@mask" Label="Text" Variant="Variant.Text" MaxLength="mask.Length" />
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudText>Pressed Key: <b>@pressedKey</b></MudText>
		<MudText>Value: <b>@TextValue</b></MudText>
		<MudText>RawValue: <b>@RawValue</b></MudText>
		<MudTextField @bind-Value="@mask" Label="Mask" />
    </MudItem>
</MudGrid>

@code {
	MudMaskField<string> maskField;
	public string TextValue { get; set; }
	public string RawValue { get; set; }
	private string pressedKey = "";
	private string mask = "(aaa) 000-aa-aa";

	private void KeyDown(KeyboardEventArgs e)
	{
		pressedKey = e.Key.ToString();
		RawValue = maskField.GetRawValue();
	}
}