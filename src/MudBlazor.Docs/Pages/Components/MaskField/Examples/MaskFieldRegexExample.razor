@namespace MudBlazor.Docs.Examples
@using System.Text.RegularExpressions


<MudGrid Class="justify-space-between">
    <MudItem xs="12" sm="6" md="4">
        <MudMaskField T="string" OnKeyDown="KeyDown" HelperText="Mask: ccc ccc" HelperTextOnFocus="true" Mask="ccc ccc" Label="Only LowerCase" Variant="Variant.Text" />
		<MudMaskField T="string" OnKeyDown="KeyDown" HelperText="Mask: eee eee" HelperTextOnFocus="true" Mask="eee eee" Label="Only UpperCase" Variant="Variant.Text" />
		<MudMaskField T="string" OnKeyDown="KeyDown" HelperText="Mask: fff fff" HelperTextOnFocus="true" Mask="fff fff" Label="Only a-fA-F" Variant="Variant.Text" 
			CustomCharacterTypes="@rgx"/>
    </MudItem>
	<MudItem xs="12" sm="6" md="4">
       <MudText>Pressed Key: <b>@pressedKey</b></MudText>
    </MudItem>
</MudGrid>

@code {
	private string pressedKey = "";
	private List<(char, Regex)> rgx = new List<(char, Regex)>()
	{
        ('f', new Regex("^[a-fA-F]$")),
    };

	private void KeyDown(KeyboardEventArgs e)
	{
		pressedKey = e.Key.ToString();
	}
}