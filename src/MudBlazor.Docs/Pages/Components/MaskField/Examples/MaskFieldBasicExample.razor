@namespace MudBlazor.Docs.Examples

<MudGrid Class="justify-space-between">
    <MudItem xs="12" sm="6" md="4">
        <MudMaskField @ref="maskField" Mask="@mask" Label="@mask.Mask" 
                      @bind-Value="RawValue" @bind-Text="TextValue"  Variant="Variant.Text" />
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
		<MudText>Text: <b>@TextValue</b></MudText>
		<MudText>Value: <b>@RawValue</b></MudText>
    </MudItem>
</MudGrid>

@code {
    MudMaskField<string> maskField;
    public string TextValue { get; set; }
    public string RawValue { get; set; }
    private SimpleMask mask = new SimpleMask("(aaa) 000-aa-aa");

}