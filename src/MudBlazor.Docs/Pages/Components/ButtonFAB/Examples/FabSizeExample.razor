@namespace MudBlazor.Docs.Examples

@inject ISnackbar Snackbar

<MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="() => OnFabClicked(Size.Small)" />
<MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Medium" OnClick="() => OnFabClicked(Size.Small)" />
<MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Large" OnClick="() => OnFabClicked(Size.Small)" />

@code {
    void OnFabClicked(Size size)
    {
        Snackbar.Add($"{size} FAB button was clicked");
    }
}
