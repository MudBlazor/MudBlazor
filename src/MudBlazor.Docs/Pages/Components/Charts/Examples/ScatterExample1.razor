@namespace MudBlazor.Docs.Examples

<div>
    <MudChart ChartType="ChartType.Scatter" XYChartSeries="@Series" @bind-SelectedIndex="Index" Width="100%" Height="350px"></MudChart>
    <MudButton @onclick="RandomizeData">Randomize Data</MudButton>
    <MudText Typo="Typo.h6">Selected portion of the chart: @Index</MudText>
</div>


@code {
    private int Index = -1; //default value cannot be 0 -> first selectedindex is 0.

    public List<XYChartSeries> Series = new List<XYChartSeries>()
    {
        new XYChartSeries() { Name = "Series 1", XData = new double[] { 5, 100, 200 }, YData = new double[] { 5, 100, 200  } },
        new XYChartSeries() { Name = "Series 2", XData = new double[] { -20, 0, 40 }, YData = new double[] { -20, 0, 40 } },
    };

    Random random = new Random();
    public void RandomizeData()
    {
        var new_series = new List<XYChartSeries>()
        {
            new XYChartSeries() { Name = "Series 1", XData = new double[3], YData = new double[3] },
            new XYChartSeries() { Name = "Series 2", XData = new double[3], YData = new double[3] },
        };
        for (int i = 0; i < 3; i++)
        {
            new_series[0].XData[i] = random.NextDouble() * 100;
            new_series[0].YData[i] = random.NextDouble() * 100;
            new_series[1].XData[i] = random.NextDouble() * 100;
            new_series[1].YData[i] = random.NextDouble() * 100;
        }
        Series = new_series;
        StateHasChanged();
    }
}