@namespace MudBlazor.Docs.Examples

<MudChart ChartType="ChartType.Line" ChartSeries="@_series" XAxisLabels="@_xAxisLabels" ChartOptions="@_options" Width="100%" Height="350px"></MudChart>

@code {
    private readonly List<ChartSeries> _series = new();
    private readonly ChartOptions _options = new();
    private readonly List<string> _xAxisLabels = new List<string>(7) { "1986-04-20", "1986-04-21", "1986-04-22", "1986-04-23", "1986-04-24", "1986-04-25", "1986-04-26" };

    protected override void OnInitialized()
    {
        _series.Add(new ChartSeries { Name = "Chernobyl-1", Data = new List<decimal>(7) { 65m, 68m, 70m, 74m, 74m, 72m, 74m } });
        _series.Add(new ChartSeries { Name = "Chernobyl-2", Data = new List<decimal>(7) { 88m, 90m, 91m, 92m, 91m, 90m, 90m } });
        _series.Add(new ChartSeries { Name = "Chernobyl-3", Data = new List<decimal>(7) { 89m, 91m, 92m, 92m, 92m, 92m, 91m } });
        _series.Add(new ChartSeries { Name = "Chernobyl-4", Data = new List<decimal>(7) { 85m, 86m, 90m, 90m, 92m, 99m, 0m } });

        _options.YAxisTicks = 400;

        StateHasChanged();
    }
}
