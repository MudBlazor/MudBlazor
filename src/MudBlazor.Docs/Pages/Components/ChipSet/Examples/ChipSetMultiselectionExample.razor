@namespace MudBlazor.Docs.Examples
<MudChipSet T="string" @bind-SelectedChips="selected" MultiSelection="true" Filter="filter">
    <MudChip T="string" Text="Milk"></MudChip>
    <MudChip T="string" Text="Eggs"></MudChip>
    <MudChip T="string" Text="Soap"></MudChip>
    <MudChip T="string" Text="Cornflakes"></MudChip>
    <MudChip T="string" Text="Salad"></MudChip>
    <MudChip T="string" Text="Apples"></MudChip>
    <MudChip T="string" Text="Red wine"></MudChip>
</MudChipSet>

<div class="d-flex flex-column align-center">
    @if (selected != null && selected.Length>0)
    {
        <MudText>You selected @string.Join(", ", selected.Select(chip=>chip.Text)).</MudText>
    }
    else
    {
        <MudText>Nothing selected.</MudText>
    }
    <MudCheckBox @bind-Checked="filter">Filter</MudCheckBox>
</div>

@code
{
    bool filter = true;
    MudChip<string>[] selected;
}

