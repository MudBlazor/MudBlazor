                <AppBarElevationExample />
            </SectionContent>
            <SectionSource Code="AppBarElevationExample" GitHubFolderName="AppBar"  />
        </DocsPageSection>
        <DocsPageSection>
            <SectionHeader>
                <Title>Dense</Title>
                <Description></Description>
            </SectionHeader>
            <SectionContent DarkenBackground="true" DisplayFlex="true">
                <AppBarDenseExample />
