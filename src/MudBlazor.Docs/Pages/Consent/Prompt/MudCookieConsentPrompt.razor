@inherits BytexDigital.Blazor.Components.CookieConsent.Dialogs.Prompt.CookieConsentPromptComponentBase

<div class="cc-fixed cc-w-full cc-mh-48 cc-flex @ConsentModalYPositionCss @ConsentModalXPositionCss mb-4" style="z-index: var(--mud-zindex-popover);">
    <MudPaper Elevation="12">
        @* TODO: Style in CSS, not through utility classes *@
        <div class="cc-max-w-3xl pa-5 d-flex flex-column gap-4">
            <div class="d-flex flex-column align-center">
                <MudText Typo="Typo.h4">
                    @Localizer.GetLocalization(Options.Value.ConsentTitleText)
                </MudText>

                <MudText Typo="Typo.subtitle1">
                    @Localizer.GetLocalization(Options.Value.ConsentDescriptionText)
                </MudText>
            </div>

            @* TODO: Style in CSS, not through utility classes *@
            <div class="d-flex flex-column justify-space-around gap-2">
                <MudButton OnClick="async () => await AcceptAsync(false)">
                    @Localizer.GetLocalization(Options.Value.ConsentNecessaryOnlyText)
                </MudButton>

                <MudButton OnClick="async () => await AcceptAsync(true)" Variant="Variant.Filled" Color="Color.Primary">
                    @Localizer.GetLocalization(Options.Value.ConsentAcceptAllText)
                </MudButton>
                    
                <MudButton OnClick="OpenSettingsAsync" Variant="Variant.Filled" Color="Color.Secondary">
                    @Localizer.GetLocalization(Options.Value.OpenPreferencesText)
                </MudButton>
                </div>
            </div>
    </MudPaper>
</div>