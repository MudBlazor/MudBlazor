@using MudBlazor.Utilities
@namespace MudBlazor.Docs.Examples

<MudThemeProvider Theme="MyCustomTheme" />

@code{
    MudTheme MyCustomTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            AdditionalStyles = new Dictionary<string, MudColor>{{"--additional-color-demo", "#d00"}}
        },
        PaletteDark = new PaletteDark()
        {
            AdditionalStyles = new Dictionary<string, MudColor>{{"--additional-color-demo", new MudColor("#dd5050")}}
        }
    };
}